.dates-identification-panel {
  display: none;

  .loader{
      content: url(<%= asset_path("ajax-loader.gif")%>);
      margin: 20px auto;
      width: 20px;
  }

  .date-identification-question {
    text-align: center;
    font-size: 18px;
    font-weight: 200;
  }

  .already-suggested-dates-container {
      .date-identification-title {
          color: $darkBlue;
          margin: 10px 0 0;
          text-align: left;
          font-size: 18px;
          font-weight: bold;
      }

      .identification-timezones-select {
          font-size: 15px;
      }
    .already-suggested-dates {
      text-align: left;
      width: 100%;
      margin: 10px 0 10px 0;
      font-size: 12px;

      .already-suggested-date {
        border: 1px solid #ccc;
        line-height: 25px;
        padding: 5px 10px;
        position: relative;
        margin-top: 5px;

        &:hover {
          background-color: #fffff5;
        }

        &.highlighted {
          background-color: $darkBlue;
          color: white;

          &.selected_by_ai {
            background-color: $aiControlColor;
          }
        }

        .date {
          font-size: 16px;
        }

        .timezone {
          color: #aaa;
          text-align: right;
          font-size: 15px;
        }

        input[type="checkbox"] {
          display: none;
        }

        label {
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          cursor: pointer;
          @include user-select(none);
        }
      }
    }
    #none-of-already-suggested-dates, #submit-these-already-suggested-dates {
      width: 100%;
      border-radius: 0;
      height: 40px;
    }
  }
  .detected-dates-container {
    .detected-dates {
      border-top: 1px solid #ccc;
      width: 100%;
      margin: 30px 0 10px 0;
      .detected-date {
        border-bottom: 1px solid #ccc;
        line-height: 25px;
        padding: 5px;
        text-align: left;
        position: relative;

        .detected-date-text {
          display: inline-block;
          background: rgb(254, 247, 186);
          padding: 0 5px;
          margin: 0 30px 0 0;
        }

        .detected-date-radios {
          display: inline-block;
          width: 170px;
          margin: 0 10px 0 0;

          input[type=radio] {
            margin: 0 5px 0 10px;
          }
        }
        .detected-date-freetext-container {
          position: absolute;
          top: 40px;
          left: 0;
          width: 100%;
          height: 115px;
          padding: 5px;
          background: #fff;

          input.detected-date-freetext {
            width: 100%;
          }
        }
        .detected-date-date {
          display: inline-block;
          width: 100%;
          margin: 10px 0px 10px 0;
          text-align: center;
        }
        .detected-date-real-date {
          display: none;
        }

        .detected-date-time {
          display: inline-block;
          width: 50%;
          text-align: center;
          margin: 0 0 10px 0;
        }

        .detected-date-timezone {
          display: inline-block;
          width: 100%;
          text-align: center;
        }

        .detected-date-remove-button {
          position: absolute;
          right: 0px;
          line-height: 35px;
          width: 35px;
          text-align: center;
          cursor: pointer;
          top: 0;
        }
      }
    }
    .add-detected-date-button-container {
      width: 100%;
      margin: 10px 0;
      text-align: right;
    }
  }
}

.julia-icon {
  background: url(asset_path("julia.png"));
  width: 25px;
  height: 25px;
  vertical-align: middle;
  margin: 0 10px 0 0;
}