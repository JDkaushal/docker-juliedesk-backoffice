$followUpColor : #FB9053;
$followUpHoverColor: #DF824C;

@mixin reminder-sprite-base {
    display: inline-block;
    width: 16px;
    height: 18px;
    background-repeat: no-repeat;
    background-size: 16px 18px;
}

.header.jd-global-header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #ccc;
  background: #f5f5f5;
  padding: 0 0 0 100px;

  line-height: 40px;
  font-size: 16px;
  font-weight: 200;

  &.full {
    z-index: 20;
  }


  .home-link {
    position: absolute;
    left: 20px;
    font-weight: 600;
  }

  .messages-thread-sumup {
    font-weight: 400;
  }


  .finish-buttons {
    position: absolute;
    top: 0;
    left: 100px;
    right: 0;
    bottom: 0;
    background: yellow;
    font-size: 15px;
    text-align: right;
    font-weight: 400;
    background: #f5f5f5;
    z-index: 10;
    display: none;

    .follow-up-reminder {
        position: relative;
        top: 5px;
        display: inline-block;
        color: white;

        .reminder-sprite {
            background-image: url(<%= asset_path 'no_reminder2x.png' %>);
        }

        &.on {
            .wrapper {
                background-color: $followUpColor;

                &.selected {
                    background-color: $followUpHoverColor;
                }
                &:hover {
                    background-color: $followUpHoverColor;
                }
            }

            .reminder-sprite {
                background-image: url(<%= asset_path 'reminder2x.png' %>);
            }
        }

      .wrapper {
          border-radius: 10px;
          width: 130px;
          height: 30px;
          margin-bottom: 5px;
          text-align: left;
          padding-left: 10px;
          cursor: pointer;
          position: relative;
          left: 40px;

          background-color: #B4B4B4;

          &.selected {
              background-color: #a1a1a1;
          }
          &:hover {
              background-color: #a1a1a1;
          }

        .date-sprite {
            display: inline-block;
            width: 11px;
            height: 13px;
            background-repeat: no-repeat;
            background-image: url(<%= asset_path 'calendar_picker2x.png' %>);
            background-size: 11px 13px;
            position: relative;
            top: -3px;
        }
        .value {
            position: relative;
            top: -5px;
        }
        .reminder-sprite {
            position: absolute;
            left: 106px;
            top: 6px;
            @include reminder-sprite-base;
        }
      }
        .droplist {
            position: absolute;
            left: -65px;
            width: 236px;
            background-color: $followUpColor;
            height: 460px;

            ul {
                list-style-type: none;
                padding-left: 0;

                li {
                    border-bottom: solid 1px;

                    &:hover {
                        background-color: $followUpHoverColor;
                    }
                    .clickable {
                        cursor: pointer;
                        padding-right: 5px;
                    }

                    .no-reminder-sprite {
                        position: relative;
                        left: -165px;
                        top: 3px;
                        @include reminder-sprite-base;
                        background-image: url(<%= asset_path 'no_reminder2x.png' %>);
                    }

                    &.picker {
                        padding-left: 3px;
                        padding-top: 3px;

                        .ui-datepicker-inline {
                            width: 14em;

                            tr {
                                line-height: 17px;
                            }
                        }
                    }

                }
            }
        }
    }

    span.old-thread-status-label {

    }
    select.old-thread-status-select {
      width: 250px;
      margin-right: 50px;
      opacity: 0.7;
    }

    span.new-thread-status-label {

    }
    select.new-thread-status-select {
      font-size: 15px;
      width: 250px;
    }

    form {
      display: inline;
    }
    .finish-buttons-finish-button {
      display: inline-block;
      margin: 0 50px;
      font-size: 15px;
      color: white;
      background: #2EC094;
      padding: 4px 50px;
      line-height: 20px;
      border-radius: 15px;
      cursor: pointer;
      @include border-radius(14px);
      font-weight: 600;
      border: none;
      
      &:disabled {
        opacity: 0.5;
      }
    }
    .finish-buttons-cancel-button {
      display: inline-block;
      cursor: pointer;
      padding: 4px 20px;
      font-size: 20px;
      line-height: 20px;
      position: relative;
      top: 1px;
    }
  }


  .done-buttons {
    float: right;
    margin: -2px 5px 0 0;
    form {
      display: inline-block;
    }
    .done-button {
      display: inline-block;
      margin: 0 2px 0 0;
      cursor: pointer;
      font-size: 12px;
      font-weight: 600;
      padding: 4px 12px;
      line-height: 20px;
      @include border-radius(14px);
      color: white;
      border: none!important;
      outline: none;



      &:hover {
        background: white;
      }

      &.send-to-support {
        background: #d00;
      }
      &.done {
        background: #2EC094;
      }
      &.nothing-expected {
        background: #db5c04;
      }

    }
  }

  &.review {
    z-index: 20;
  }
  .sound-activator {
    position: absolute;
    left: 10px;
    top: 5px;
    cursor: pointer;
    opacity: 0.2;

    &:hover {
      opacity: 0.4;
    }

    .sound-activated {
      @include common-sprite(speaker_on);
      display: none;
      width: 30px;
      height: 30px;
    }
    .sound-disactivated {
      @include common-sprite(speaker_off);
      display: block;
      width: 30px;
      height: 30px;
    }
    &.activated {
      .sound-activated {
        display: block;
      }
      .sound-disactivated {
        display: none;
      }
    }
  }

  a, a:visited {
    color: #444;
    text-decoration: none!important;

    span.version {
      font-size: 10px;
      color: #aaa;
      padding: 0 10px 0 5px;
    }
  }

  .global-todo-count {
    background: #fff;
    width: 30px;
    display: inline-block;
    height: 20px;
    color: #999;
    position: relative;
    margin: 0px 0 0 5px;
    line-height: 20px;
    text-align: center;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    top: 0px;
    border: 1px solid #ccc;
  }
  .logged-as {
    position: absolute;
    top: 0;
    right: 10px;
    font-size: 12px;
  }

  form#review-form {
    position: absolute;
    top: 0;
    right: 0;
    width: 200px;
    height: 40px;
  }
}