

<script>
    $(function () {
        window.calendarParams.height = $(".calendar-container").height();
        window.calendarParams.other_emails = window.otherAccountEmails;
        window.currentCalendar = new Calendar($(".calendar-container"), window.calendarParams);
    });
</script>
<div class="calendar-container">

  <div class="global-loading">
    <div class="global-loading-positioner">
      <%= image_tag "ajax-loader.gif", class: "global-spinner" %>

      <div class="global-loading-message"></div>
    </div>
  </div>
  <div class="local-loading">
    <%= image_tag "ajax-loader.gif", class: "local-spinner" %>
    <div class="local-loading-message"></div>
  </div>
  <div id="content">


    <div class="calendar-header-settings">
      <span class="calendar-timezone-label"><%= I18n.t("calendar.calendar_tz") %></span>
      <select id="calendar-timezone">
        <option value="Europe/Paris" selected>Paris</option>
      </select>
    </div>

    <div id='calendar'></div>
  </div>

  <div id="minimize-button" class="btn btn-default"><%= I18n.t("calendar.minimize") %></div>


  <div id="event-details-container"></div>
  <div id="event-details-template-container">

      <div class="event-details">
        <div class="first-panel">
          <input class="title"/>
          <br>

          <div class="date"></div>
          <div class="event-date-edit-container">
            <input class="start-date event-dates" type="date"/>
            <input class="start-hours event-dates" type="text"/>h<input class="start-minutes event-dates"
                                                                        type="text"/>
          </div>

          <div class="event-date-edit-container">
            <input class="end-date event-dates" type="date"/>
            <input class="end-hours event-dates" type="text"/>h<input class="end-minutes event-dates"
                                                                      type="text"/>
          </div>

          <div class="border"></div>

          <div class="location-container">
            <input class="location"/>
            <%= image_tag "calendar/location_icon.png", class: "location-icon" %>
          </div>

          <div class="border"></div>

          <div class="attendees"></div>

          <div class="border"></div>

          <textarea class="notes"></textarea>

        </div>
        <div class="second-panel">
          <div class="attendees-title">Attendees</div>
          <div class="attendees-list"></div>
          <div class="new-attendee-container">
            <input id="new-attendee"/>

            <div class="add-new-attendee">add</div>
          </div>
          <div class="notify-container">
            <input type="checkbox" id="should-notify"/>
            Notify attendees of any change
          </div>
        </div>

        <%= image_tag "calendar/close_window.png", class: "event-close-button" %>

        <%= image_tag "ajax-loader.gif", class: "event-spinner" %>


        <div class="event-edit-buttons">
          <div id="event-edit-button">Edit</div>
          <div id="event-delete-button">Delete</div>
          <div id="event-cancel-button">Cancel</div>
          <div id="event-save-button">Save</div>
        </div>
      </div>

  </div>

  <div id="calendars-list-popup" align="center">
    <%= image_tag "calendar/close_window.png", id: "close-calendars-list-popup" %>
    <input type='checkbox' id='weekends-checkbox'/>
    <span><%= I18n.t("calendar.display_weekends") %></span>

    <div class="calendars"></div>
  </div>

</div>