.constraint-tile {
    border: 1px solid #ccc;
    padding: 10px;
    margin: 10px 0;
    font-size: 12px;

    .constraint-entry-container {
        padding: 2px 0;
    }
    .constraint-label {
        display: inline-block;
        width: 100px;
        font-size: 12px;
        color: #999;
    }
    select {
        display: inline-block;
        width: 200px;
    }
    .constraint-start-date, .constraint-end-date {
        width: 80px;
        margin: 0 10px 0px 0;
    }
    .constraint-start-hours, .constraint-start-minutes, .constraint-end-hours, .constraint-end-minutes {
        width: 40px;
        text-align: center;
    }
    .constraint-dates-days-of-week-container {
        margin-left: 104px;
        font-size: 12px;
        width: 195px;

    }
    .constraint-dates-start-container, .constraint-dates-end-container {
        margin: 0 0 5px 104px;
        position: relative;
        .from-to-label {
            position: absolute;
            top: 0;
            left: -100px;
            width: 96px;
            text-align: right;
            color: #999;
            line-height: 23px;
            font-size: 10px;
        }
    }
    .end-recurring-radios-container {
        display: inline-block;
        vertical-align: top;
    }

    .constraint-sentence {
        text-align: center;
        font-weight: 600;
        font-size: 14px;
        padding: 20px 0 0 0;
    }
    .remove-constraint-button-container {
        padding: 20px 0 0 0;
        text-align: right;
    }
}
