.ai-entities {

   &.dates-identification {
       .juliedesk-entity {
           &.time {
               background-color: #FEF7BA;
               padding: 2px;
               border-radius: 5px;
           }
       }
   }


  .juliedesk-entity {

    &.validated {
      background-color: #f5f5f5 !important;
      color: black !important;
      background-image: url(<%= asset_path 'check_greenx2.png' %>) !important;
    }

    background-position: 97% 47%;
    padding: 2px;
    padding-right: 15px;
    background-repeat: no-repeat;

    &.phone {
      color: black;
        cursor: pointer;
      background-color: #ACDDED;
      border-radius: 5px;
      background-image: url(<%= asset_path 'phone_grey.png' %>);
      background-size: 8px 13px;

      &:hover {
        text-decoration: underline;
      }

      &.highlighted {
        background-color: #189ACA;
        color: white;
        background-image: url(<%= asset_path 'phone_white.png' %>);
      }
    }

    &.skype {
        cursor: pointer;
      color: black;
      background-color: #ACDDED;
      border-radius: 5px;
      padding-right: 18px;
      background-image: url(<%= asset_path 'skype_grey.png' %>);
      background-size: 10px 10px;

      &:hover {
        text-decoration: underline;
      }

      &.highlighted {
        background-color: #189ACA;
        color: white;
        background-image: url(<%= asset_path 'skype_white.png' %>);
      }
    }

      &.time {
          padding: 0;
      }

    &.location {
        padding-right: 0px;
      /*background-color: #ed7e82;*/
      /*padding: 2px;*/
      /*border-radius: 5px;*/
    }
  }
}

phone-skype-entities-manager {
  ul {
    margin-bottom: 0;
  }
  
  .phone-skype-entities-form {
    position: absolute;
    height: 418px;
    overflow: hidden;
    max-width: 500px;
    border-radius: 3px;
    z-index: 1;
    //background-color: #f5f5f5;
    color: black;
    font-size: 12px;

    .header {
      color: #9C9C9C;
      font-size: 12px;
      padding-left: 2px;
      background-color: #f5f5f5;
      border-color: #ccc;
      border-style: solid;
      border-bottom-style: none;
      border-width: 1px;
      border-radius: 3px 3px 0px 0px;
      .text {
        font-weight: bold;
      }
      #entity_value {
        width: 98%;
        font-size: 16px;
        color: black;
      }
    }

    .content {
      .edition-panel {
        position: relative;
        left: 0px;
        z-index: 1;

        .add-to {
          color: #9C9C9C;
          font-size: 12px;
          padding-left: 2px;
          padding-top: 10px;
          background-color: #f5f5f5;
          border-color: #ccc;
          border-style: none solid;
          border-width: 1px;
          font-weight: bold;
        }

        .interaction-area {
          position: relative;

          &.slide-to-left {
            animation-name: slideToLeft;
            animation-duration: 0.2s;
            left: -100%;
          }

          &.slide-to-right {
            animation-name: slideToRight;
            animation-duration: 0.2s;
            left: 0px;
          }

          .attendees-area {
            //_height: expression( this.scrollHeight > 74 ? "75px" : "auto" ); /* sets max-height for IE6 */
            //max-height: 75px; /* sets max-height value for all standards-compliant browsers */
            overflow: scroll;
            background-color: #f5f5f5;
            border-color: #ccc;
            border-style: solid;
            border-top-style: none;
            border-width: 1px;
            border-radius: 0px 0px 3px 3px;
            max-height: 338px;
            position: relative;

            .list {
              list-style: none;
              padding-left: 0;
              .attendee {
                cursor: pointer;
                padding: 5px 6px;
                border-color: #ccc;
                border-top-style: solid;
                border-width: 1px;
                font-weight: 200;
                font-size: 16px;
                background-color: white;
                &:last-child {
                  border-bottom-style: solid;
                }
                .sprite {
                  background-image: url(<%= asset_path 'arrow_blackx2.png' %>);
                  background-repeat: no-repeat;
                  background-size: 12px 13px;
                  width: 12px;
                  display: inline-block;
                  height: 13px;
                  position: relative;
                  float: right;
                  top: 3px;
                  left: 5px;
                  margin-left: 6px;
                }

                &:hover {
                  color: white;
                  background-color: #189ACA;
                  .sprite {
                    background-image: url(<%= asset_path 'arrow_whitex2.png' %>);
                  }

                }
              }
            }
          }

          .attendee-edition {
            background-color: #f5f5f5;
            left: 100%;
            position: absolute;
            top: 0;
            width: 100%;

            &.slide-to-left {
              animation-name: slideToLeft;
              animation-duration: 0.2s;
              left: 0px;
            }

            &.slide-to-right {
              animation-name: slideToRight;
              animation-duration: 0.2s;
              left: 100%;
            }

            .attendee-name {
              background-color: #8C8C8C;
              color: white;
              padding: 5px;
              font-weight: 200;
              font-size: 14px;
              text-align: center;
              .sprite {
                cursor: pointer;
                opacity: 0.95;
                background-image: url(<%= asset_path 'participants2x.png' %>);
                background-repeat: no-repeat;
                background-size: 21px 13px;
                width: 21px;
                display: inline-block;
                height: 13px;
                float: left;
                top: 4px;
                position: relative;

                &:hover {
                  opacity: 1;
                }
              }
            }
            .entities {
              .types{
                list-style: none;
                padding-left: 0;
                border-color: #ccc;
                border-style: none solid;
                border-width: 1px;
                border-radius: 0px 0px 3px 3px;
                .type {
                  cursor: pointer;
                  padding: 4px 7px;
                  border-color: #ccc;
                  border-top-style: solid;
                  border-width: 1px;
                  font-weight: 200;
                  font-size: 16px;
                  background-color: white;

                  &:last-child {
                    border-bottom-style: solid;
                  }

                  &:hover {
                    color: white;
                    background-color: #189ACA;
                  }

                  &.highlighted {
                    color: white;
                    background-color: #189ACA;
                  }
                }
              }
            }
          }
        }
      }

      .attendee-selected {
        background-color: #f5f5f5;
        border-style: solid;
        border-width: 1px;
        border-color: #ccc;
        border-radius: 5px;
        position: relative;
        top: -254px;
        //height: 133px;
        .attendee-name {
          background-color: #8C8C8C;
          color: black;
          padding: 5px;
          font-weight: 200;
          font-size: 13px;
          text-align: center;
          .sprite {
            cursor: pointer;
            opacity: 0.85;
            background-image: url(<%= asset_path 'edit@2x.png' %>);
            background-repeat: no-repeat;
            background-size: 22px 22px;
            width: 22px;
            display: inline-block;
            height: 22px;
            float: right;
            position: relative;
            top: -2px;

            &:hover {
              opacity: 1;
            }
          }
        }
        .entities {
          .types{
            list-style: none;
            padding-left: 0;

            #show_other_attendees_button {
              cursor: pointer;
            }
            .type {
              padding: 2px 5px;
              border-color: #ccc;
              border-top-style: solid;
              border-width: 1px;
              font-weight: 200;

              &:last-child {
                border-bottom-style: solid;
              }

              &:hover {
                color: white;
                background-color: #189ACA;
                .sprite {
                  background-image: url(<%= asset_path 'arrow_whitex2.png' %>);
                }
              }

              &.highlighted {
                color: white;
                background-color: #189ACA;
              }

              .sprite {
                background-image: url(<%= asset_path 'arrow_greyx2.png' %>);
                background-repeat: no-repeat;
                background-size: 12px 13px;
                width: 12px;
                display: inline-block;
                height: 13px;
                position: relative;
                float: right;
                top: 3px;
                left: 5px;
              }
            }
          }
        }
      }
    }
  }
}

@keyframes slideToLeft {
  from {left: 0px;}
  to {left: -100%;}
}

@keyframes slideToRight {
  from {left: -100%;}
  to {left: 0px;}
}