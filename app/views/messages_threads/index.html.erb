<% count = MessagesThread.items_to_classify_count %>

<div class="fixed-columns">
  <div class="left-column">

    <%= render partial: "common/header" %>


    <%= link_to I18n.t("common.refresh"), :index_with_import_messages_threads, class: "btn btn-success refresh-inbox-button" %>

    <div class="messages-threads-container">
      <% @messages_thread.each do |messages_thread| %>
          <%= link_to messages_thread, class: "messages-thread-item" do %>
              <div class="account-email">
                <%= messages_thread.account_name || I18n.t("info_box.no_account_found") %>
                <%= (messages_thread.messages.length>1) ? "(#{messages_thread.messages.length})" : "" %>
              </div>
              <div class="subject-and-snippet">
                <div class="subject">
                  <%= messages_thread.subject %>
                </div>
                <div class="snippet">
                  - <%== messages_thread.snippet %>
                </div>
              </div>
              <div class="received-at">
                <%= I18n.l(messages_thread.messages.map(&:received_at).max, format: "%d %B %Y, %H:%M") %>
              </div>
          <% end %>
      <% end %>
    </div>
    <% if count == 0 %>
        <h5><%= I18n.t("index.nothing_to_do")%></h5>
    <% end %>
  </div>
</div>


<div class="messages-thread-info-panel"></div>