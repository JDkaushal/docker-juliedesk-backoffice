<div class="col-md-8 col-md-offset-3">
<h1>Stats</h1>

  <nav>
    <ul class="pagination">
<% (-2..0).each do |month| %>
    <% date = (DateTime.now + month.months) %>
        <li class="<%= DateTime.parse(params[:date]).strftime("%B %Y") == date.strftime("%B %Y") ? "active" : nil %>">
    <%= link_to date.strftime("%B %Y"), "?date=#{date.to_s}", class: "" %>
        </li>
<% end %>
    </ul>
  </nav>

<table class="table table-striped">
<% @data.each do |key, value| %>
<tr>
  <td><%= "#{key}".gsub("_", " ").capitalize %></td>
  <td><%= value %></td>
</tr>
<% end %>
</table>
</div>