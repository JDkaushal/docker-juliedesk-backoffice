.create-event-panel {
  display: none;
  padding: 0 0 30px 0;
  margin: 0 0 20px 0;
  border-bottom: 1px solid #ccc;

  .suggested-date-times {

    .pleaseSelectDate {
      text-align: center;
      padding: 0 10px 10px 10px;
    }

    .ai-no-dates-validated {
      color: $aiControlColor;

      .sprite {
        background-image: url(<%= asset_path 'warning2x.png' %>);
        background-repeat: no-repeat;
        background-size: 20px 20px;
        width: 20px;
        height: 20px;
        position: relative;
        display: inline-block;
        margin-top: 5px;
      }

      .text {
        margin-left: 10px;
        vertical-align: super;
      }
    }

    .timezone-selection-area {
      margin-bottom: 5px;

      .dates-suggestion-timezone-label {
        font-size: 15px;
        opacity: 0.8;
        margin: 10px 0 0 0;
        color: #AAAAAA;
      }

      #event_creation_timezone {
        width: 100%;
        height: 30px;
        font-size: 15px;
      }
    }

    .data-entry {
      .data-entry-name {
        color: $darkBlue;
        margin: 10px 0 0;
        text-align: left;
        font-size: 18px;
        font-weight: bold;
      }

      .data-entry-value {
        .suggested-date-time-container {
          margin: 2px 0;

          .suggested-date-time {
            width: 100%;
            display: inline-block;
            border-radius: 0;
            padding: 5px;
            text-align: left;
            font-size: 16px;

            &.is-outbound {
              color: red;
            }
          }


          input[type='checkbox'] {
            width: 15px;
            height: 15px;
            margin: 5px 5px;
          }
        }

        .selected-date-details-area {

          .content {
            padding: 10px 30px 10px 30px;
            background-color: #DEF2F9;
            line-height: 16px;

              .selected-date-time-other-timezone {
                  margin-bottom: 15px;
              }

            .out-of-bound-sprite {
              background-image: url(<%= asset_path 'warning_red2x.png' %>);
                background-repeat: no-repeat;
                background-size: 20px 20px;
                width: 20px;
                height: 20px;
                position: absolute;
                display: inline-block;
                left: 15px;
                margin-top: 5px;
            }

              .text {
                  display: inline-block;
                  font-size: 15px;

              }
            .timezone {
              color: #878A8B;
                display: inline-block;
                font-weight: bold;
            }
          }
        }
      }
    }
  }

  .creating-event-message {
    text-align: center;
    line-height: 30px;
    font-size: 14px;
    color: #aaa;
    font-weight: 200;
  }

  .forceAskSuggestions {
    text-align: center;
    margin-top: 15px;

    a {
      color: grey;
      text-decoration: underline;
      cursor: pointer;
    }
  }
  .online-meeting-warning-container {
    margin-bottom: 15px;

    .warning-content {
      color: red;
      font-weight: bold;
      text-align: center;

      .warning-sprite-container {
        margin-top: 10px;

        .warning-sprite {
          background-image: url(<%= asset_path 'warning_red2x.png' %>);
          background-position: center;
          background-size: 28px 26px;
          background-repeat: no-repeat;
          width: 28px;
          height: 28px;
          display: inline-block;
        }
      }
    }
  }
}

.virtual-resources-details-container {
    .warning-area {
        margin-top: 10px;
        color: #E37F7F;

        .sprite {
            background-image: url(<%= asset_path 'warning_red2x.png' %>);
            background-size: 28px 26px;
            background-repeat: no-repeat;
            width: 28px;
            height: 26px;
            position: relative;
            left: -3px;
            top: 0px;
            display: inline-block;
        }
    }
}

.verification-out-of-bounds {
  margin-top: 10px;
  margin-bottom: 10px;
  #verification_out_of_bounds_message {
    text-align: center;
    color: red;
    font-size: 16px;
  }
}

.meeting-rooms-availabilities-details-container {
  margin-bottom: 10px;

  &.event-creator {
    margin-top: 10px;
  }

  .meeting-rooms-availabilities-details-wrapper {
    border: solid 1px $meetingRoomsFeatureColor;

    .meeting-rooms-availabilities-header {
      color: white;
      text-align: center;
      padding: 10px;
      background-color: $meetingRoomsFeatureColor;
    }

    .meeting-rooms-availabilities-body {
      background-color:  $meetingRoomsFeatureColorLight;
      padding: 10px;

      .meeting-rooms-availabilities-details-content {
        display: -webkit-flex;
        display: flex;
        margin-top: 10px;

        .room-availability-sprite {
          background-position: center;
          background-size: 22px 22px;
          background-repeat: no-repeat;
          width: 28px;
          display: inline-block;
          margin-right: 10px;

          &.room-available {
            background-image: url(<%= asset_path 'check_greenx2.png' %>);
          }

          &.room-unavailable {
            background-image: url(<%= asset_path 'cross_red.png' %>);
          }
        }
      }
    }
  }

  .meeting-rooms-warning-container {
    margin-bottom: 15px;

    .warning-content {
      color: red;
      font-weight: bold;
      text-align: center;

      .warning-sprite-container {
        margin-top: 10px;

        .warning-sprite {
          background-image: url(<%= asset_path 'warning_red2x.png' %>);
          background-position: center;
          background-size: 28px 26px;
          background-repeat: no-repeat;
          width: 28px;
          height: 28px;
          display: inline-block;
        }
      }
    }
  }
}


.create-event-meeting-rooms-container {
    margin-top: 10px;
    margin-bottom: 10px;

    .header {
        .text {
            margin-left: 5px;
        }
    }

    .warning-area {
        margin-top: 10px;
        color: #E37F7F;
        display: none;

        .sprite {
            background-image: url(<%= asset_path 'warning_red2x.png' %>);
            background-size: 28px 26px;
            background-repeat: no-repeat;
            width: 28px;
            height: 26px;
            position: relative;
            left: -3px;
            top: 0px;
            display: inline-block;
        }
    }
}

.basic-loader-in-add-meeting {
  display: none;
  color: #000;

  img {
    width: 32px;
    margin: -10px 0px;
  }
}