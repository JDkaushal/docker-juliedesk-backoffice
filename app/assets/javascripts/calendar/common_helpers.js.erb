window.CommonHelpers.filterEvents = function(events) {
    return $.grep(events, function(event) {
        if(event.attendees) {
            var declined = false;
            $.each(event.attendees, function(k, attendee) {
                if(attendee.self && attendee.responseStatus == "declined") {
                    declined = true;
                    return false;
                }
            });
            if(declined) {
                return false;
            }
        }
        return true;
    });
};

