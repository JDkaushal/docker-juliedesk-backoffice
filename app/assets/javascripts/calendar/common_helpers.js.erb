CommonHelpers.formatDateTimeRangeInText = function(startDate, endDate, locale, timezone, allDay) {
    if(!locale) locale = "en";
    var mStartDate = moment(startDate).tz(timezone).locale(locale);
    var mEndDate = moment(endDate).tz(timezone).locale(locale);
    var today = moment();

    var formattedStartDate = (mStartDate.isSame(today, "day") ? localize("dates.today") : mStartDate.format("dddd D MMMM YYYY"));
    var formattedEndDate = (mEndDate.isSame(today, "day") ? localize("dates.today") : mEndDate.format("dddd D MMMM YYYY"));

    if(allDay) {
        if(formattedEndDate != localize("dates.today"))
        {
            formattedEndDate = moment(endDate).locale(locale);
            formattedEndDate.add('d', -1);
        }
        if(mStartDate.format("YYYY-MM-DD") == formattedEndDate.format("YYYY-MM-DD")) {
            return formattedStartDate;
        }
        else {
            return formattedStartDate + " - " + formattedEndDate.format("dddd D MMMM YYYY");
        }
    }
    else {
        if(mStartDate.format("YYYY-MM-DD") == mEndDate.format("YYYY-MM-DD")) {
            return formattedStartDate + ", " + mStartDate.format("LT") + " - " + mEndDate.format("LT") + " (" + timezone.replace(/_/g, " ") + ")";
        }
        else {
            return formattedStartDate + mStartDate.format(" LT") + " - " + formattedEndDate + mEndDate.format(" LT") + " (" + timezone.replace(/_/g, " ") + ")";
        }
    }

};