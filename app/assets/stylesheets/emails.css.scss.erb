.email {
    position: relative;
    background-color: #fff;
    border-bottom: 1px solid #ccc;

    &.highlighted {
        background-color: $lightBlue;
    }

    .retracted {
        display: block;
        background: #f5f5f5;
        cursor: pointer;
        height: 60px;

        .retracted-container {

        }
        .checkbox-container {
            height: 62px;
            width: 60px;
            text-align: center;
            position: relative;
            display: none;
            position: absolute;
            left: -60px;
            top: -1px;
            background: #f5f5f5;
            border-bottom: 1px solid #ccc;
            border-top: 1px solid #ccc;

            input {
                margin: 20px 0;
                position: relative;
                z-index: 2;
            }

            label {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
            }
        }

        .subject {
            display: none;
        }
        .snippet {
            padding: 5px 10px 5px 10px;
        }
    }

    .extended {
        display: none;

        .retractable {
            cursor: pointer;
        }
    }

    &.extended {
        .extended {
            display: block;
        }
        .retracted {
            display: none;
        }
    }

    .date-and-from {
        padding: 5px 10px 5px 10px;
        .from {
            float: left;
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
        }
        .date {
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
            float: right;
        }
    }

    .subject {
        border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 5px 10px;
        font-size: 16px;
        font-weight: 600;
    }

    .to, .cc {
        font-size: 14px;
        line-height: 20px;
        padding: 0px 10px;
        font-weight: 200;
        font-size: 14px;
        .email-label {
            color: #aaa;
        }
    }

    .current-action-message {
        position: absolute;
        right: 18px;
        top: 40px;
        line-height: 30px;
        padding: 0px 20px;
        background: rgba(255, 255, 255, 0.4);
        cursor: default;
        color: rgba(0,0,0,0.3);
        font-weight: 600;
    }

    .actions-menu-button {
        position: absolute;
        top: 30px;
        right: 20px;
        width: 40px;
        height: 40px;
        line-height: 80px;
        background: red;
        cursor: pointer;
        border: 1px solid #ccc;
        background: #fafafa;
        content: url(<%= asset_path "answer-all.png" %>);

        &:hover {
            background: #f5f5f5;
        }
    }
    .actions-menu {
        position: absolute;
        display: none;
        top: 69px;
        right: 20px;
        width: 260px;
        height: 302px;
        border: 1px solid #ccc;
        background: #fff;
        cursor: default;
        z-index: 5;
        @include box-shadow(0 3px 6px rgba(0, 0, 0, 0.1));
        margin: 0 0 50px 0;

        .secondary-actions {

        }

        .actions-separator {
            height: 10px;
            border-top: 1px solid #ddd;
            margin-top: 10px;
        }

        .action {
            height: 30px;
            line-height: 30px;
            cursor: pointer;
            padding: 0 10px;
            display: block;
            color: #000;
            text-decoration: none;
            font-size: 13px;
            cursor: pointer;
            display: block;
            background: transparent;
            border: none;
            width: 100%;
            text-align: left;

            &:hover {
                background: #f5f5f5;
            }

            &[disabled] {
                color: #aaa;
                background: #fff;
                cursor: default;
            }

        }
        .spinner {
            display: none;
            position: absolute;
            bottom: 10px;
            width: 20px;
            left: 90px;
        }

        &.visible {
            display: block;
        }
    }

    .body {
        //border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 30px 10px 5px 10px;

        * {
            background: transparent !important;
        }

        .wetime-date-link {
            background: rgb(254, 247, 186) !important;
            padding: 0 5px;

            .conflict-dot {
                display: none;
            }
        }

        blockquote, .gmail_quote {
            //height: 20px;
            //overflow: hidden;
            //cursor: pointer;
            //opacity: 0.5;
            font-size: 14px !important;

            display: none;
            //&:hover {
            //  opacity: 1.0;
            //}

            //&.expanded {
            //  opacity: 1.0;
            //  height: auto;
            //}
        }
    }
}

