.messages-thread-info-panel {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 350px;

  border-left: 1px solid #ccc;
  padding: 60px 10px 10px 10px;
  z-index: 2;
  background-color: #fff;

  z-index: 10;

  .noSuggestionsNeeded {
    padding: 5px 10px;
    background-color: #D3F0DF;
    margin-bottom: 25px;
  }
  .noSuggestionsNeeded > p.note {
    color: #2EC094;
    font-weight: bold;
    padding-left: 30px;
    position: relative;
  }
  .noSuggestionsNeeded > p.note:before {
    content: '';
    background: transparent url(<%= asset_path 'linked_participant_form_green.png' %>);
    position: absolute;
    left: 0;
    top: 0;
    display: block;
    height: 25px;
    width: 25px;
  }

  &.scrollable {
    overflow: scroll;
  }

  &.frozen {
    overflow: unset;
  }

  .only-locale-panel {
    display: none;
  }

  label.asap-checkbox-container {
    border: 1px solid #ccc;
    display: block;
    padding: 10px;
    margin: 10px 0;
    cursor: pointer;
    font-weight: 400;
    position: relative;

    input[type=checkbox] {
      cursor: inherit;
      outline: none;
    }

    .checkbox-container-background {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      z-index: -1;
    }

    input[type=checkbox].ai-checked:checked + .checkbox-container-background {
      background: $aiControlColorBackground-40pct;
    }
    &.disabled {
      cursor: not-allowed;
      background: #f0f0f0;
    }
  }

  .classic-info-panel {
    $level_agreement_green: #748804;
    $level_agreement_red: #CF3E3E;

    $level_agreement_green_background: rgba(116,136,4,0.34);
    $level_agreement_red_background: rgba(207,62,62,0.34);

    .client-agreement-level-container {
      margin-top: 18px;
      margin-bottom: 4px;

      .main-title{
        font-weight: bold;
      }

      .summary {
        font-size: 13px;
      }
      .header {
        font-size: 16px;
        font-weight: bold;
      }
      .content {
        padding: 5px;
      }

      .sentence {
        font-size: 14px;
      }

      .authorized_request {
        display: none;
        .header {
          color: $level_agreement_green;

          .client-agreement-sprite {
            background-image: url(<%= asset_path 'request_authorized.png' %>);
            background-repeat: no-repeat;
            background-size: 23px 23px;
            width: 23px;
            display: inline-block;
            height: 23px;
            position: relative;
            top: 5px;
            margin-right: 5px;
          }
        }
        .content {
          background-color: $level_agreement_green_background;
        }
      }
      .trusted_request {
        display: none;
        .header {
          color: $level_agreement_green;

          .client-agreement-sprite {
            background-image: url(<%= asset_path 'trusted_request.png' %>);
            background-repeat: no-repeat;
            background-size: 23px 23px;
            width: 23px;
            display: inline-block;
            height: 23px;
            position: relative;
            top: 5px;
            margin-right: 5px;
          }
        }
        .content {
           background-color: $level_agreement_green_background;
        }
      }
      .unauthorized_request {
        display: none;
        .header {
          color: $level_agreement_red;

          .client-agreement-sprite {
            background-image: url(<%= asset_path 'unauthorized_request.png' %>);
            background-repeat: no-repeat;
            background-size: 23px 23px;
            width: 23px;
            display: inline-block;
            height: 23px;
            position: relative;
            top: 5px;
            margin-right: 5px;
          }
        }
        .content {
          background-color: $level_agreement_red_background;

          .ask-client-agreement {
            a {
              text-decoration: none;
            }
          }
        }
      }
    }
  }

