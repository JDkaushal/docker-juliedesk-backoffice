    border-color: #BDA793 !important;
}

input[type="checkbox"].custom {
  display: none;

  & + label {
    padding-left: 25px;
    position: relative;
    cursor: pointer;

    &:before {
      position: absolute;
      left: 0px;
      content: '';
      display: inline-block;
      height: 12px;
      width: 12px;
      background: transparent url(<%= asset_path 'checkbox-2x.png' %>) no-repeat;
      -webkit-background-size: cover;
      background-size: cover;
      top: 4px;
    }
  }

  &:checked + label:before {
    background: transparent url(<%= asset_path 'checkbox-checked-2x.png' %>) no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
  }

  &:checked.ai + label:before {
    background: transparent url(<%= asset_path 'ai-checkbox-checked-2x.png' %>) no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
  }

}

.alert-custom {
  color: black;
  margin: 0 -10px;
  padding: 10px;

  &.alert-danger {
    background: $alertDanger;
  }
}
.btn {
  &.btn-full {
    width: 100%;
  }
}


.fixed-columns {
  padding-right: 350px;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  .left-column {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 0 20px 0 100px;
    overflow: scroll;
  }

  &.full {
    padding: 0;
    .left-column {
      padding: 0 100px 0 100px;
    }
  }
}


.row.minheight {
  min-height: 100%;
  position: relative;
}

.clear {
  clear: left;
}

.page {
  position: relative;
}

#back-button {
  position: absolute;
  left: 0px;
  top: 65px;
  padding: 10px;
  display: inline-block;
}
.page.bordered{
  border-left: 1px solid #ccc;
  padding-bottom: 20px;
}


.footer {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 40px;
  line-height: 40px;
  width: 100%;
  z-index: -1;

  .copyright {
    text-align: right;
    color: #666;
    font-size: 14px;
  }
}

.loading-box-on-top {
  position: fixed;
  top: 0;
  left: 50%;
  margin-left: -100px;
  width: 200px;
  text-align: center;
  line-height: 16px;
  height: 16px;
  background: $darkBlue;
  padding: 5px 0;
  box-sizing: content-box;
  font-size: 12px;
  border-radius: 0 0 6px 4px;
  color: white;
}

.standard-panel {
  text-align: center;
  padding: 20px 0;
  width: 1100px;
  margin: 0 auto;
}

.notransition, .notransition * {
  -webkit-transition: none !important;
  -moz-transition: none !important;
  -o-transition: none !important;
  transition: none !important;
}

