.email {
    position: relative;
    background-color: #fff;
    border-bottom: 1px solid #ccc;

    &.highlighted {
        background-color: $lightBlue;
    }

    .retracted {
        display: block;
        background: #f5f5f5;
        cursor: pointer;
        height: 60px;

        .retracted-container {

        }
        .checkbox-container {
            height: 62px;
            width: 60px;
            text-align: center;
            position: relative;
            display: none;
            position: absolute;
            left: -60px;
            top: -1px;
            background: #f5f5f5;
            border-bottom: 1px solid #ccc;
            border-top: 1px solid #ccc;

            input {
                margin: 20px 0;
                position: relative;
                z-index: 2;
            }

            label {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
            }
        }

        .review-container {
            height: 62px;
            width: 60px;
            text-align: center;
            position: relative;
            position: absolute;
            left: -60px;
            top: -1px;
            background: #f5f5f5;
            border-bottom: 1px solid #ccc;
            border-top: 1px solid #ccc;
            cursor: default;


            .to-learn-switch {
                width: 100%;
                height: 100%;
                cursor: pointer;
                @include user-select(none);

                .option {
                    width: 100%;
                    height: 100%;
                    padding: 10px 0px;
                    background: #188d2b;
                    color: white;
                    @include user-select(none);

                    &.to-learn {
                        display: none;
                        background: red;

                    }
                }
            }
        }

        .subject {
            display: none;
        }
        .snippet {
            padding: 5px 10px 5px 10px;
        }
    }

    .extended {
        display: none;
        background: white;

        .retractable {
            cursor: pointer;
        }
    }

    &.extended {
        .extended {
            display: block;
            position: relative;
        }
        .retracted {
            /*display: none;*/
            position: absolute;
            z-index: 0;
            top: 0;
            left: 0;
            width: 100%;
        }
    }

    .date-and-from {
        padding: 5px 10px 5px 10px;
        .from {
            float: left;
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
        }
        .date {
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
            float: right;
        }
        .operator {
            float: right;
            margin: 0 10px;
            padding: 0 8px;
            background-color: white;
            color: #646161;
            border-radius: 4px;
            line-height: 20px;
            font-size: 12px;
            border: 1px solid #ddd;
        }
    }

    .subject {
        border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 5px 10px;
        font-size: 16px;
        font-weight: 600;
    }

    .to, .cc {
        font-size: 14px;
        line-height: 20px;
        padding: 0px 10px;
        font-weight: 200;
        font-size: 14px;
        .email-label {
            color: #aaa;
        }
    }

    .current-action-message {
        position: absolute;
        right: 18px;
        top: 40px;
        line-height: 30px;
        padding: 0px 20px;
        background: rgba(255, 255, 255, 0.4);
        cursor: default;
        color: rgba(0, 0, 0, 0.3);
        font-weight: 600;
    }

    .actions-menu-button {
        position: absolute;
        top: 30px;
        right: 20px;
        width: 40px;
        height: 40px;
        line-height: 80px;
        background: red;
        cursor: pointer;
        border: 1px solid #ccc;
        background: #fafafa;
        content: url(<%= asset_path "answer-all.png" %>);

        &:hover {
            background: #f5f5f5;
        }
    }
    .actions-menu-positioner {
        position: absolute;
        display: none;
        top: 69px;
        right: 20px;

        &.visible {
            display: block;
        }

        .actions-menu {
            width: 260px;
            //height: 392px;
            border: 1px solid #ccc;
            background: #fff;
            cursor: default;
            z-index: 5;
            @include box-shadow(0 3px 6px rgba(0, 0, 0, 0.1));
            margin: 0 0 50px 0;
            position: relative;
            padding: 0 0 20px 0;

            .classification-category {
                border-top: 1px solid #ccc;
                margin: -1px 0 20px 0;

                .classification-title {
                    padding: 5px;
                    font-size: 12px;
                    color: #aaa;
                }

                .action {
                    height: 30px;
                    line-height: 30px;
                    cursor: pointer;
                    padding: 0 10px;
                    display: block;
                    color: #000;
                    text-decoration: none;
                    font-size: 13px;
                    cursor: pointer;
                    display: block;
                    background: transparent;
                    border: none;
                    width: 100%;
                    text-align: left;

                    &:hover {
                        background: #f5f5f5;
                    }

                    &[disabled] {
                        color: #aaa;
                        background: #fff;
                        cursor: default;
                    }
                }
            }

            .spinner {
                display: none;
                position: absolute;
                bottom: 10px;
                width: 20px;
                left: 120px;
            }

        }
    }


    .body {
        //border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 30px 10px 5px 10px;

        * {
            /*background: transparent !important;*/
        }

        .wetime-date-link {
            background: rgb(254, 247, 186) !important;
            padding: 0 5px;

            .conflict-dot {
                display: none;
            }
        }

        .expand-quotes-button {
            background: #ddd;
            border: 1px solid #ccc;
            width: 50px;
            text-align: center;
            line-height: 8px;
            padding: 0;
            font-size: 20px;
            height: 20px;
            margin: 10px 0;
            cursor: pointer;
            @include user-select(none);
        }

        blockquote, .gmail_quote {
            display: none;
            font-size: 14px !important;

            &.expanded {
                display: block;
            }
        }
    }
}

.highlighted-below-email {
    background-color: $lightBlue;
    padding: 10px;
}