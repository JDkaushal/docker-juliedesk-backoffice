@mixin thread-label {
    color: white;
    display: inline-block;
    padding-left: 5px;
    padding-right: 5px;
    border-radius: 5px;
    line-height: 18px;
    font-size: 12px;
    position: relative;
    top: -2px;
}

.wrong-clock {
    position: fixed;
    z-index: 10;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 200px 0;
    font-size: 18px;
    top: 40px;
    left: 0;
    right: 0;
    bottom: 0;
}

.messages-threads-page {
    padding: 0 0 50px 0;
    position: relative;

    .refresh-container {
        margin: 60px auto 20px auto;
        position: relative;
        padding-bottom: 32px;

        .operator-greetings {
            width: 780px;
            margin: 10px auto 20px auto;
            text-align: center;
            font-size: 25px;
            font-weight: lighter;
            .metric {
                font-size: 28px;
                color: $darkBlue;
            }
        }

        .refresh-inbox-button {
            margin: 10px auto 20px auto;
            display: block;
            width: 130px;
            opacity: 0.8;

            &:hover {
                opacity: 1.0;
            }
        }
        .spinner {
            position: absolute;
            margin: 0 auto;
            bottom: 0;
            left: 50%;
            margin-left: -16px;
            display: block;
            width: 20px;
        }
    }

    .action-to-do-container {
        height: 210px;
        padding: 5px;
        margin: 0 0 40px 0;

        .process-thread-button {
            margin: 73px auto 73px auto;
            display: block;
            width: 200px;
            opacity: 0.8;
        }
    }



    .messages-threads-container {
        margin: 0px 0 60px 0;

        &.bordered {
            border-top: 1px solid #ccc;
        }
        .messages-thread-item {
            text-align: left;
            height: 50px;
            line-height: 30px;
            border-bottom: 1px solid #ccc;
            background: #f5f5f5;
            padding: 4px 10px;
            display: block;
            color: black;
            text-decoration: none;
            font-size: 13px;
            position: relative;

            .first-row {
                position: relative;
                top: -3px;
                display: inline-block;

            }

            .messages-thread-lock-container {
                display: block;
                position: absolute;
                top: 0px;
                left: 0;
                bottom: 1px;
                right: 0px;
                background-color: rgba(255, 255, 255, 0.90);
                text-align: center;
                z-index: 2;
                color: rgb(255, 136, 0);
                line-height: 50px;
                font-size: 14px;
                font-weight: 600;
            }

            .scheduled-for-today {
                display: inline-block;
                margin-right: 5px;
                font-size: 14px;
                color: red;
                font-style: italic;
                .sprite {
                    margin-right: 5px;
                    position: absolute;
                    top: 5px;
                    display: inline-block;
                    height: 20px;
                    width: 19px;
                    background: url(<%= asset_path 'scheduled-for-today.png' %>);
                    background-size: 19px 20px;
                    background-repeat: no-repeat;
                }
                .text {
                    margin-left: 22px;
                    line-height: 30px;
                    position: relative;
                    top: -4px;
                }

            }

            .account-email {
                display: inline-block;
                height: 40px;
                font-size: 14px;
                color: #797979;
                font-weight: bold;
            }

            .priority1 {
                background-color: #FA5555;
            }

            .priority2 {
                background-color: #FF712F;

                &.lesser-priority {
                    display: none !important;
                }
            }

            .priority3 {
                background-color: #0099CC;

                &.lesser-priority {
                    display: none !important;
                }
            }

            .priority4 {
                background-color: #B4B4B4;
                display: none !important;
            }

            .account-life-duration {
                margin-left: 2px;
                @include thread-label;
            }

            .requests-count-for-today {
                @include thread-label;
            }

            .thread-status {
                @include thread-label;

                &.scheduling-waiting-for-client {
                   background-color: rgba(196, 157, 93, 0.65);
                }

                &.scheduling-waiting-for-contact {
                    background-color: rgba(196, 157, 93, 0.65);
                }

                &.scheduled {
                    background-color: rgba(73, 201, 169, 0.66);
                }

                &.scheduling-aborted {
                    background-color: rgba(200, 110, 110, 0.65);
                }

                &.does-not-concern-client {
                    background-color: rgba(180, 180, 180, 0.65);
                }

                &.handled-in-other-threads {
                    background-color: rgba(128, 109, 144, 0.66);
                }

                &.events-creation {
                    background-color: rgba(122, 110, 99, 0.65);
                }

                &.new-request {
                    background-color: rgba(245, 166, 35, 0.65);
                }

                &.other {
                    background-color: rgba(180, 180, 180, 0.66);
                }
            }

            .thread-operator {
                display: inline-block;
                margin-left: 5px;
                font-style: italic;
                position: relative;
                top: -2px;
                .operator-color {
                    width: 6px;
                    height: 6px;
                    display: inline-block;
                    border-radius: 10px;
                    margin-right: 5px;
                    vertical-align: middle;
                }
                .operator-name {
                    vertical-align: middle;
                    font-size: 14px;
                }
            }

            .subject-and-snippet {
                position: absolute;
                overflow: hidden;
                height: 30px;
                top: 20px;
                left: 40px;
                font-size: 14px;
                font-weight: 400;

                .subject {
                    display: inline;
                }

                .snippet {
                    display: inline;
                    font-weight: 200;
                }
            }

            .delegated-to-founders {
                position: absolute;
                top: 20px;
                left: -72px;
                height: 18px;
                line-height: 16px;
                background: $darkBlue;
                color: white;
                padding: 1px 5px;
                border-radius: 4px;
                font-size: 12px;

                &.only_support_can_process {
                    left: -63px;
                    height: 27px;
                    width: 28px;
                    border-radius: 20px;
                    top: 12px;

                    .delegation-text {
                        position: relative;
                        top: 6px;
                        left: -1px;
                        letter-spacing: 1px;
                    }
                }

              &.thread_blocked {
                background-color: #CF3E3E;
                left: -85px;
              }
              &.office_365_refresh_token_expired {
                left: -92px;
              }

              &.only_admin_can_process {
                left: -86px;
              }

              &.is_multi_clients {
                left: -86px;
              }

              &.unknown_client {
                left: -96px;
              }

                &.sent_to_admin {
                  background-color: #CF3E3E;
                  left: -69px;
                }

                &.to_be_merged {
                    background-color: #F19165;
                    width: 75px;
                    left: -85px;
                    text-align: right;
                    .to-be-merged-sprite {
                        background-image: url(<%= asset_path 'merge_whitex2.png' %>);
                        background-repeat: no-repeat;
                        background-size: 17px 10px;
                        width: 17px;
                        height: 10px;
                        position: relative;
                        left: -48px;
                        display: inline-block;
                    }
                    .delegation-text{
                        display: inline-block;
                        position: relative;
                        top: -16px;
                        left: 2px;
                    }
                }
            }

            .received-at {
                text-align: right;
                width: 150px;
                height: 40px;
                overflow: hidden;
                position: absolute;
                top: 0;
                right: 20px;
                font-size: 14px;
                font-weight: 400;
            }

            .emails-count {
                display: inline-block;
                position: absolute;
                top: 20px;
                left: 10px;
                font-style: italic;
                font-size: 14px;
                color: #4A4A4A;
            }

            &:hover {
                background: #f2f2f2;
            }
        }


        .to-process-later-container, .waiting-for-preference-change-container {
            padding: 100px 0 0 0;



            .messages-thread-item {
                opacity: 0.4;
            }
        }
    }

    .category-title {
        color: #aaa;
        padding: 5px 0 10px 0;
        font-size: 18px;
        font-weight: 400;
    }

    .nothing-to-do {
        img {
            margin: 20px 0;
        }
        text-align: center;
        font-size: 20px;
        font-weight: 200;
    }
}

