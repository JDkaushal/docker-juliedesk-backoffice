<% months = @data.keys %>
<div class="col-md-8 col-md-offset-3">
  <h1>Stats</h1>

  <table class="table table-striped">
    <tr>
      <th></th>
      <th></th>

      <% months.each do |month| %>
          <th><%= DateTime.parse(month).strftime("%b %Y") %></th>
      <% end %>
    </tr>
    <% @data.values.first.each do |value_group_key, value_groups| %>

        <tr class="info">
          <th><%= value_group_key %></th>
          <th></th>
          <% months.each do |month| %>
            <th></th>
          <% end %>
        </tr>

          <% value_groups.each do |value_key, value| %>
            <tr>
              <td></td>
              <td><%= value_key %></td>
              <% @data.each do |month, data_values| %>
                  <td><%= data_values[value_group_key][value_key] %></td>
              <% end %>
            </tr>
          <% end %>

    <% end %>
  </table>
</div>