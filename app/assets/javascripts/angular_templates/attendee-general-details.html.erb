<div class="attendee-checkbox col-xs-1" ng-if="attendee.isThreadOwner">
  <%= check_box_tag :attendee_thread_owner, '', true, {'ng-model' => 'attendee.isPresent', disabled: true} %>
</div>
<div class="attendee-checkbox col-xs-1" ng-if="!attendee.isThreadOwner">
  <%= check_box_tag :attendee, '', true, {'ng-model' => 'attendee.isPresent', 'ng-disabled' => 'attendees_manager.readOnly'} %>
</div>
<div class="col-xs-1 client-picto-contact" ng-show="attendee.isClient">
  <%= image_tag 'client_picto.png', width: 20, height: 20 %>
</div>
<div class="attendee-details" ng-class="{'col-xs-8': attendee.isClient, 'col-xs-9': !attendee.isClient}">
  <div class="row ellipsable">
    <span class="attendee-usage-name">{{(attendee.gender == 'M' || attendee.gender == 'F') ? attendee.displayGender() : '' }} {{attendee.firstName}} {{attendee.lastName}}</span><span class="attendee-no-company" ng-if="attendee.company==''">Entreprise non dÃ©finie</span>
  </div>

  <div class="row ellipsable" style="margin-top: -3px;">
    <cite class="attendee-email">{{attendee.email}}</cite>
  </div>

  <div class="row ellipsable" style="margin-top: -3px;" ng-show="!attendee.timezone ==''">
    <cite class="attendee-timezone">{{attendee.timezone}}</cite>
  </div>

  <div class="row ellipsable" ng-show="attendee.assisted">
      <cite class="attendee-assistant" ng-show="attendee.assisted">AssistÃ© par {{attendee.assistedBy.displayName || attendee.assistedBy.usageName}} ({{attendee.assistedBy.email}})</cite>
  </div>

  <div class="row ellipsable" ng-show="attendee.isAssistant">
      <cite class="attendee-assistant" ng-show="attendee.isAssistant">Assistant(e)</cite>
  </div>
</div>
<div class="attendee-update-button-container col-xs-1" ng-class="{'client-correction': attendee.isClient}">
  <button ng-click='attendees_manager.displayAttendeeUpdateForm(attendee)'>
    <%= image_tag 'edit_contact_button.png' %>
  </button>
</div>


