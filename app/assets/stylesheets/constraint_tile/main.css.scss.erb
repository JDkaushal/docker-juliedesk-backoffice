.ai-suggestion-container {
  padding: 10px;
  margin: 10px 0;

  .from-ai-interpreted-location-container {
    position: relative;

    .client-preference-icon {
      position: absolute;
      background: url("<%= asset_path("client-preferences-icon-16.png")%>");
      top: 9px;
      left: 9px;
      width: 16px;
      height: 16px;
    }
    input.from-ai-interpreted-location {
      padding: 7px 7px 7px 35px;
      background: #fafafa;
      @include box-shadow(none);
      border: 1px solid #ddd;
      @include border-radius (6px);
      width: 100%;
    }
  }
}
.ai-suggestion-container, .constraint-tile {
  .from-ai-title {
    display: none;
    background: $aiControlColor;
    color: white;
    text-transform: uppercase;
    margin: -10px -10px 0px -10px;
    padding: 10px;
    font-size: 14px;
  }

  .from-ai-text {
    display: none;
    .from-ai-text-label {
      font-size: 13px;
      padding: 10px 0 0px 0;
      font-weight: 600;

    }
    .from-ai-text-text {
      display: inline-block;
      background: #E4D9F9;
      font-size: 15px;
      padding: 1px 5px;
    }
  }

  .from-ai-buttons {
    display: none;
    height: 40px;
    margin: 10px -10px -10px -10px;

    .from-ai-button {
      float: left;
      width: 50%;
      text-align: center;
      background-color: $aiControlColorBackground-70pct;
      color: white;
      height: 40px;
      line-height: 40px;
      cursor: pointer;
      background-repeat: no-repeat;
      background-position: center center;
      //border-top: 1px solid $aiControlColor;

      &:hover {
        background-color: $aiControlColor;
      }

      &.accept {
        background-image: url(<%= asset_path "validate_white_18.png" %>);
      }

      &.reject {
        background-image: url(<%= asset_path "unvalidate_white_18.png" %>);
        border-right: 1px solid #fff;
      }
    }
  }

  &.from-ai {
    border: 1px solid $aiControlColor;

    .from-ai-title {
      display: block;
    }
    .from-ai-text {
      display: block;
    }
    .from-ai-buttons {
      display: block;
    }
    .constraint-buttons-container {
      display: none;
    }
  }
}

.constraint-tile {
    border: 1px solid #ccc;
    padding: 10px;
    margin: 5px auto 10px auto;
    font-size: 12px;





    .constraint-entry-container {
        padding: 2px 0;
    }
    .constraint-label {
        display: inline-block;
        width: 50px;
        font-size: 12px;
        color: #999;
    }

    .constraint-calendar-tile-container {
        margin: 10px auto;
    }

    .custom-selector {
        .nature-option {
            display: inline-block;
            background: #eee;
            @include border-radius(4px);
            width: 70px;
            margin: 5px 2px;
            text-align: center;
            padding: 5px;
            font-size: 12px;
            font-weight: 400;
            cursor: pointer;

            &:hover {
                background: #ddd;
            }

            &.selected {
                background: $darkBlue;
                color: white;

                &[data-value='can'] {
                    background: rgba(39, 155, 26, 0.9);
                }
                &[data-value='cant'] {
                    background: rgba(203, 40, 40, 0.9);
                }
            }
        }

        &.disabled {
            .nature-option {
                cursor: default;

                &:hover {
                    background: #eee;
                }
                &.selected {
                    background: $darkBlue;
                    color: white;


                }
            }
        }
    }
    select {
        display: inline-block;
        width: 250px;
    }
    .constraint-start-date, .constraint-end-date {
        width: 80px;
        margin: 0 10px 0px 0;
    }
    .constraint-start-hours, .constraint-start-minutes, .constraint-end-hours, .constraint-end-minutes {
        width: 30px;
        text-align: center;
        outline: none;
    }

    .constraint-time-separator {
        background-color: white;
        margin: 0 -1px 0 -1px;
        height: 23px;
        display: inline-block;
        vertical-align: top;
        padding: 0 0px;
        line-height: 21px;
        position: relative;
        z-index: 2;
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        color: #ccc;
    }

    .constraint-dates-days-of-week-container {
        padding: 5px 0 5px 5px;
        font-size: 12px;

        * {
            @include user-select(none);
        }

        .day-of-week {
            display: inline-block;
            width: 35px;
            @include border-radius(2px);
            cursor: pointer;
            padding: 3px 5px;
            background: #eee;
            text-align: center;
            
            &:hover {
                background: #ddd;
            }

            &.disabled {
                cursor: default;
                background: transparent;
            }

            &.selected {
                background: $darkBlue;
                color: white;
            }
        }

        .quick-selector-container {
            display: inline-block;
            vertical-align: top;
            padding: 2px 10px 2px 0;

            .quick-selector {
                width: 18px;
                height: 18px;
                background-color: #ddd;
                @include border-radius(9px);
                cursor: pointer;

                &:hover {
                    background-color: #ccc;
                }

                &.selected {
                    background-color: $darkBlue;
                }
            }
        }

    }

    .constraints-start-end-recurring-container {
        padding: 5px 0 5px 53px;
        input {
            width: 113px;
        }
    }
    .constraint-start-time-end-time-container {
        display: inline-block;
        vertical-align: top;
        padding: 0 0 20px 0;

        select.constraint-start-time-end-time-nature {

        }

        .constraint-start-hours-end-hours-container {
            padding: 5px 0;

            .timezone-container {
                padding: 5px 0;
                color: #aaa;
                input.timezone {
                    color: #000;
                    width: 149px;
                }
            }

            .quick-time-selectors {
                padding: 5px 0;
                .select-morning, .select-afternoon {
                    display: inline-block;
                    width: 80px;
                    margin: 0 5px 0 0;
                    @include border-radius(2px);
                    cursor: pointer;
                    border: 1px solid #ddd;
                    text-align: center;
                    padding: 2px 5px;
                    font-size: 11px;

                    &:hover {
                        background: #e7f2f5;
                    }
                }
            }

        }
    }
    .constraint-dates-start-container, .constraint-dates-end-container {
        padding: 5px 0 5px 53px;
        position: relative;
        .from-to-label {
            position: absolute;
            top: 0;
            left: -100px;
            width: 96px;
            text-align: right;
            color: #999;
            line-height: 23px;
            font-size: 10px;
        }
    }
    .end-recurring-radios-container {
        display: inline-block;
        vertical-align: top;
    }

    .constraint-sentence {
        text-align: left;
        font-weight: 400;
        font-size: 14px;
        line-height: 30px;

        span {
            border: 1px solid white;
        }

        .invalid {
            color: white;
            background: #e00;
            @include border-radius(15px);
            padding: 5px 10px;
            line-height: 20px;
        }
        .attendee-name {
            color: $darkBlue;
            border-color: $darkBlue;
            @include border-radius(15px);
            padding: 2px 10px;
            line-height: 20px;
        }
        .date {
            color: #999;
            border-color: #999;
            @include border-radius(15px);
            padding: 2px 10px;
            line-height: 20px;
        }
        .time {
            color: $darkBlue;
            border-color: $darkBlue;
            @include border-radius(15px);
            padding: 2px 10px;
            line-height: 20px;
        }
        .timezone {
            color: #999;
            border-color: #999;
            @include border-radius(15px);
            padding: 2px 10px;
            line-height: 20px;
        }
        .constraint-nature {
            color: $darkBlue;
            border-color: $darkBlue;
            @include border-radius(15px);
            padding: 2px 10px;
            line-height: 20px;
            margin: 0 5px;

            &.can {
                color: rgba(39, 155, 26, 0.9);
                border-color: rgba(39, 155, 26, 0.9);
            }
            &.cant {
                color: rgba(203, 40, 40, 0.9);
                border-color: rgba(203, 40, 40, 0.9);
            }
        }
    }
    .constraint-editing-container {
        @include transition-property(max-height);
        @include transition-duration(0.8s);
        max-height: 1000px;
        overflow: hidden;
        margin: 0 -10px;
        padding: 0 10px;
    }
    .constraint-buttons-container {
        padding: 20px 0 0 0;
        text-align: right;

        .expand-constraint-button {
            display: none !important;
        }
    }

    &.minimized {
        .constraint-editing-container {
            max-height: 0;
        }

        .expand-constraint-button {
            display: inline-block !important;
        }

        .minimize-constraint-button {
            display: none !important;
        }
    }

    &.disabled {
        .constraint-entry-container {
            max-height: 0;
        }

        .constraint-buttons-container {
            display: none;
        }
    }
}
