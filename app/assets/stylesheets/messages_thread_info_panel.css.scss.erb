        margin: 10px 0 20px;
        text-align: center;
        font-size: 18px;
        font-weight: 200;
      }
      .selected-event {
        background: $darkBlue;
        color: white;
        text-align: left;
        padding: 10px 10px 10px 30px;
        margin: 10px 0;

        .selected-event-title {
          font-size: 15px;
        }
        .selected-event-date {
          font-size: 12px;
        }
        .selected-event-no-attendees-container {
          background: white;
          margin: 10px 0 0 0;
          position: relative;

          .selected-event-no-attendees {
            font-weight: 600;
            color: #e00;
            display: inline-block;
            padding: 3px 10px;
            font-size: 12px;
          }
          .selected-event-force-cancel {
            position: absolute;
            top: 0px;
            right: 0px;
            height: 23px;
            color: #444;
            padding: 3px 10px;
            font-size: 12px;
            input[type=checkbox] {
              margin: 0 5px;
            }
          }
        }
      }
    }

    .time-slots-to-suggest-list-container {
      //position: fixed;
      /*top: 40px;*/
      /*width: 350px;*/
      /*right: 0;*/
      /*border-bottom: 1px solid #ccc;*/
      /*border-left: 1px solid #ccc;*/
      background-color: #fff;
      z-index: 2;

      .time-slots-to-suggest-list {
        padding: 10px 10px 30px 10px;

        .aiSuggestion {
          color: #9013fe;
          font-weight: bold;
        }

        .dates-suggestions-from-ai-remaining-warning {
          color: $aiControlColor;
          text-align: center;
        }

        .dates-suggestion-timezone-label {
          font-size: 11px;
          opacity: 0.8;
          margin: 10px 0 0 0;
          color: #AAAAAA;
        }

        #dates_suggestion_timezone {
          width: 100%;
          height: 30px;
        }

        .dates-suggestions-wrapper {
          margin-top: 10px;
          //max-height: 500px;
          //overflow-y: auto;

          .timezoned-suggestions-area {
            margin-bottom: 30px;

            .timezone-title {
              font-weight: bold;
              margin-bottom: 5px;
            }

            .btn {
              margin-top: 2px;
              font-size: 15px;
              border-radius: 0;
              text-align: left;
            }

            .from-ai {
              background-color: $aiControlColor;
              border-color: $aiControlInputBorderColor;
              padding: 0;

              &:hover {
                background-color: $aiEventsHighlightedColor;
              }

              &.highlighted {
                background-color: $aiEventsHighlightedColor;
              }

              .date-text {
                padding: 6px 12px;
              }
            }

            .ai-suggestion-action-wrapper {
              /*position: absolute;*/
              /*right: 40px;*/
              border-top: solid 1px;
              height: 30px;

              .ai-suggestion-action-item-container {
                display: inline-block;
                width: 50%;
                text-align: center;
                height: 100%;

                &.highlight {
                  background-color: white;
                  .ai-suggestion-action {

                    &.accept {
                      background-image: url(<%= asset_path 'validate_purple.png' %>);
                    }

                    &.reject {
                      background-image: url(<%= asset_path 'unvalidate_purple.png' %>);
                    }
                  }
                }

                &:hover {
                  background-color: white;
                  .ai-suggestion-action {

                    &.accept {
                      background-image: url(<%= asset_path 'validate_purple.png' %>);
                    }

                    &.reject {
                      background-image: url(<%= asset_path 'unvalidate_purple.png' %>);
                    }
                  }
                }

                &:first-child {
                  border-right: solid 1px;
                }

                &:last-child {
                  margin-left: -4px;
                }
              }

              .ai-suggestion-action {
                display: inline-block;
                height: 16px;
                position: relative;
                width: 16px;
                top: 25%;

                &.accept {
                  @include ai-date-suggestion-sprite-accept();
                }

                &.reject {
                  @include ai-date-suggestion-sprite-reject();
                }
              }
            }
          }
        }
      }

      .ai-area {
        color: $aiControlColor;
        font-weight: bold;

        .ai-loader-area {
          .ai-loader {
            background-image: url(<%= asset_path 'ai_processing_loader.gif' %>);
            background-repeat: no-repeat;
            background-size: 25px 25px;
            width: 25px;
            display: inline-block;
            height: 25px;
            position: relative;
            top: 6px;
          }

          .loader-text {
            margin-left: 5px;
          }
        }

        .warning-area {
          color: $aiControlColor;

          .ai-warning-sprite {
            background-image: url(<%= asset_path 'warning2x.png' %>);
            background-repeat: no-repeat;
            background-size: 25px 25px;
            width: 25px;
            display: inline-block;
            height: 25px;
            position: relative;
            top: 6px;
          }

          .ai-warning {
            margin-left: 5px;
          }
        }

        .error-area {
          color: red;

          .ai-error-sprite {
            background-image: url(<%= asset_path 'warning_red2x.png' %>);
            background-repeat: no-repeat;
            background-size: 25px 25px;
            width: 25px;
            display: inline-block;
            height: 25px;
            position: relative;
            top: 6px;
          }

          .ai-error {
            margin-left: 5px;
          }
        }
      }

      .time-slots-to-suggest-title {
        color: $darkBlue;
        margin: 10px 0 0;
        text-align: left;
        font-size: 14px;
        font-weight: bold;

        &.purple {
          color: $aiControlColor;
        }
      }

      .time-slots-to-suggest-outbound-count {
        color: red;
        font-size: 12px;
      }

      .time-slots-to-suggest-timezone {
        font-size: 15px;
      }

      .btn-success {
        margin-top: 40px;
        &.nomargin {
          margin-top: 0px;
        }
      }
    }
  }

