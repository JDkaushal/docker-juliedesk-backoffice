.julie-action-title {
    background: $darkBlue;
    line-height: 30px;
    text-align: center;
    color: white;
    font-size: 20px;
    font-weight: 200;
    padding: 5px 0;
    position: absolute;
    top: 40px;
    width: 100%;
    left: 0;
    z-index: 5;

    #show-calendar-button {
        position: absolute;
        top: 5px;
        right: 20px;
    }
}
.julie-action-fantom {
    height: 70px;
    width: 100%;
}
.language-selector-container {
    position: absolute;
    bottom: -50px;
    left: 0;
    height: 30px;
    width: 100px;
    background-color: white;
    border: 1px solid #ccc;
    line-height: 28px;

    .selector {
        display: inline-block;
        width: 50%;
        text-align: center;
        cursor: pointer;

        &:hover {
            background: #eee;
        }
    }
}

.forward-to-support-container {
    position: absolute;
    top: 128px;
    right: 10px;

    .forward-to-support-menu-button {
        position: absolute;
        top: 0px;
        right: 0px;
        width: 33px;
        height: 37px;
        text-align: center;
        @include common-sprite(forward-to-client-template-menu);
        cursor: pointer;
        @include box-shadow(0 3px 6px rgba(0, 0, 0, 0.4));
    }
    .forward-to-support-menu {
        position: relative;
        top: 37px;
        background: white;
        border-top: 1px solid #ddd;
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;

        .forward-to-support-menu-item {
            border-bottom: 1px solid #ddd;
            width: 300px;
            padding: 5px 20px;
            cursor: pointer;

            &:hover {
                background-color: #fafafa;
            }
        }
    }
}