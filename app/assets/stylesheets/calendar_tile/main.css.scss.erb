.calendar-tile {
  border: 1px solid #ccc;
  //width: 322px;
  height: 250px;

  width: 329px;
  margin: 0 0 0 -4px;
  position: relative;

  * {
    @include user-select(none);
  }


  .disabled-cache {
    display: none;
    position: absolute;
    background: transparent;
    top: 30px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    z-index: 2;
  }
  &.disabled {
    .disabled-cache {
      display: block;
    }
  }

  .calendar-tile-header {
    position: relative;
    height: 30px;
    border-bottom: 1px solid #eee;
    .month-container {
      text-align: center;
      line-height: 30px;
    }
    .back-button, .next-button {
      position: absolute;
      top: 2px;
      left: 2px;
      width: 26px;
      height: 26px;
      line-height: 26px;
      text-align: center;
      @include border-radius(13px);
      cursor: pointer;

      &.next-button {
        left: auto;
        right: 2px;
      }

      &:hover {
        background: $darkBlue;
        color: white;
      }
    }
  }

  .day-names-container {
    width: 320px;
    height: 30px;
    padding: 5px 0 5px 40px;

    .day-name {
      float: left;
      width: 40px;
      height: 20px;
      font-size: 12px;
      text-align: center;
      line-height: 20px;
      color: #666;
    }
  }


  .days-container {
    width: 320px;
    height: 150px;

    .week-container {
      .week-selector-container {
        float: left;
        width: 40px;
        height: 30px;
        color: white;
        padding: 5px;
        text-align: center;

        .week-selector {
          color: white;
          border: 1px solid #ccc;
          width: 20px;
          height: 20px;
          display: inline-block;
          @include border-radius(10px);
          cursor: pointer;

          &:hover {
            background: #fafafa;
          }
          &.selected {
            background: $darkBlue;
            border-color: $darkBlue;
          }
        }
      }

      .day {
        float: left;
        width: 36px;
        height: 26px;
        text-align: center;
        line-height: 26px;
        margin: 2px;
        color: #666;
        cursor: pointer;
        @include border-radius(2px);



        &.other-month {
          color: #ddd;
        }
        &.today {
          font-weight: 200;
          font-size: 20px;
          line-height: 26px;
          color: $darkBlue;
        }



        &:hover:not(.implicit-selected):not(.selected) {
          background: #eee;
          color: #666;
        }

        &.implicit-selected {
          background: $darkBlue;
          color: white;
        }

        &.selected {
          background: $darkBlue;
          color: white;
        }


      }
    }

  }
}

travel-time-tile {
  height: 300px;
  width: 250px;
  position: absolute;
  margin-top: -150px;
  top: 50%;
  left: 775px;
  z-index: 11;
  background-color: white;
  border-style: solid;
  border-width: 1px;
  border-radius: 5px;

    border-style: solid;
    border-width: 1px;
    border-color: #A0A0A0;

  .header {
    height: 50px;
    text-align: center;
    background-color: #C27938;
    opacity: 0.80;

      &.warning {
          background-color: #CA6A65;
      }

    .close-sprite {
        background-image: url(<%= asset_path 'close.png' %>);
        background-repeat: no-repeat;
        background-size: 10px 10px;
        width: 10px;
        height: 10px;
        display: inline-block;
        position: absolute;
        top: 5px;
        left: 234px;
        cursor: pointer;
        opacity: 0.80;

        &:hover {
            opacity: 1;
        }
    }

    .text {
      padding-top: 15px;
      color: black;
        font-size: 15px;
    }
  }

  .content {
    padding: 20px 20px 20px 35px;
    overflow: hidden;

    .travelTimeDate {
        margin-bottom: 6px;

      .sprite {
          position: absolute;
          left: 12px;
          top: 74px;
        background-image: url(<%= asset_path 'time.png' %>);
        background-repeat: no-repeat;
          background-size: 12px 12px;
          width: 12px;
          height: 12px;
          display: inline-block;
      }

        .day {
            font-size: 16px;
            text-transform:capitalize;
        }

        .range {
            font-size: 16px;
        }
    }

    .directions {
        margin-bottom: 25px;
        font-weight: lighter;
        font-size: 16px;

        .sprite {
            background-image: url(<%= asset_path 'direction.png' %>);
            background-repeat: no-repeat;
            background-size: 10px 53px;
            width: 10px;
            height: 53px;
            display: inline-block;
            position: absolute;
            left: 12px;
            top: 128px;
        }

      .from {
          margin-bottom: 18px;
          white-space: nowrap;
      }

      .to {
        white-space: nowrap;
      }

        input[type="text"] {
            border: none;
            width: 200px;
        }
    }

      .travel-time-details {
          color: $darkBlue;
          line-height: 17px;

          .travel-time {
              font-size: 16px;
              font-weight: bold;
          }

          a {
              color: $darkBlue;
          }

      }
  }


}