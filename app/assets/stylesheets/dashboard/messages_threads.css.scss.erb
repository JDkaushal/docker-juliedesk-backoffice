.messages-threads-page {
    padding: 0 0 50px 0;
    position: relative;

    .refresh-container {
        margin: 60px auto 10px auto;
        height: 80px;
        .refresh-inbox-button {
            margin: 10px auto 10px auto;
            display: block;
            width: 130px;
            opacity: 0.8;

            &:hover {
                opacity: 1.0;
            }
        }
        .spinner {
            margin: 20px auto 10px auto;
            display: block;
            width: 20px;
        }
    }

    .action-to-do-container {
        height: 210px;
        padding: 5px;
        margin: 0 0 40px 0;

        .process-thread-button {
            margin: 73px auto 73px auto;
            display: block;
            width: 200px;
            opacity: 0.8;
        }
    }



    .messages-threads-container {
        margin: 0px 0 60px 0;

        &.bordered {
            border-top: 1px solid #ccc;
        }
        .messages-thread-item {
            text-align: left;
            height: 40px;
            line-height: 40px;
            border-bottom: 1px solid #ccc;
            background: #f5f5f5;
            padding: 0 20px;
            display: block;
            //overflow: hidden;
            color: black;
            text-decoration: none;
            font-size: 13px;
            position: relative;

            .messages-thread-lock-container {
                display: block;
                position: absolute;
                top: 0px;
                left: 0;
                bottom: 1px;
                right: 0px;
                background-color: rgba(255, 255, 255, 0.90);
                text-align: center;
                z-index: 2;
                color: rgb(255, 136, 0);
                line-height: 40px;
                font-size: 14px;
                font-weight: 600;
            }

            .account-email {
                display: inline-block;
                width: 200px;
                overflow: hidden;
                height: 40px;
            }

            .subject-and-snippet {
                position: absolute;
                overflow: hidden;
                height: 40px;
                top: 0;
                left: 200px;
                right: 190px;

                .subject {
                    display: inline;
                }

                .snippet {
                    display: inline;
                    color: #999;
                }
            }

            .delegated-to-founders {
                position: absolute;
                top: 8px;
                left: -75px;
                height: 26px;
                line-height: 20px;
                background: #f60;
                color: white;
                padding: 3px 5px;
                border-radius: 4px;
            }

            .received-at {
                text-align: right;
                width: 150px;
                height: 40px;
                overflow: hidden;
                position: absolute;
                top: 0;
                right: 20px;
            }

            &:hover {
                background: #f2f2f2;
            }
        }


        .to-process-later-container, .waiting-for-preference-change-container {
            padding: 100px 0 0 0;



            .messages-thread-item {
                opacity: 0.4;
            }
        }
    }

    .category-title {
        color: #aaa;
        padding: 5px 0 10px 0;
        font-size: 14px;
        font-weight: 400;
    }

    .nothing-to-do {
        img {
            margin: 20px 0;
        }
        text-align: center;
        font-size: 20px;
        font-weight: 200;
    }
}

