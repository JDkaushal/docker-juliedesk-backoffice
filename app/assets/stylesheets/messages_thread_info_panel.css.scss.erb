    top: 0px;
    right: 0px;
    width: 350px;
    background: $darkBlue;
    padding: 5px 0;
    text-align: center;
    color: #fff;
    font-size: 22px;
    font-weight: 200;
    line-height: 30px;
    display: none;
    z-index: 2;

    &.no-account-page {
      top: 40px;
      display: block;
    }
  }

  #thread-header-other-entries-container {

