@mixin thread-label {
    color: white;
    display: inline-block;
    padding-left: 8px;
    padding-right: 8px;
    border-radius: 5px;
    line-height: 22px;
    font-size: 14px;
}

.wrong-clock {
    position: fixed;
    z-index: 10;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 200px 0;
    font-size: 18px;
    top: 40px;
    left: 0;
    right: 0;
    bottom: 0;
}

.messages-threads-page {
    padding: 0 0 50px 0;
    position: relative;

    .refresh-container {
        margin: 60px auto 10px auto;
        height: 80px;
        .refresh-inbox-button {
            margin: 10px auto 10px auto;
            display: block;
            width: 130px;
            opacity: 0.8;

            &:hover {
                opacity: 1.0;
            }
        }
        .spinner {
            margin: 20px auto 10px auto;
            display: block;
            width: 20px;
        }
    }

    .action-to-do-container {
        height: 210px;
        padding: 5px;
        margin: 0 0 40px 0;

        .process-thread-button {
            margin: 73px auto 73px auto;
            display: block;
            width: 200px;
            opacity: 0.8;
        }
    }



    .messages-threads-container {
        margin: 0px 0 60px 0;

        &.bordered {
            border-top: 1px solid #ccc;
        }
        .messages-thread-item {
            text-align: left;
            height: 65px;
            line-height: 30px;
            border-bottom: 1px solid #ccc;
            background: #f5f5f5;
            padding: 5px 10px;
            display: block;
            color: black;
            text-decoration: none;
            font-size: 13px;
            position: relative;

            .first-row {
                position: relative;
                top: 2px;
                display: inline-block;

            }

            .messages-thread-lock-container {
                display: block;
                position: absolute;
                top: 0px;
                left: 0;
                bottom: 1px;
                right: 0px;
                background-color: rgba(255, 255, 255, 0.90);
                text-align: center;
                z-index: 2;
                color: rgb(255, 136, 0);
                line-height: 60px;
                font-size: 14px;
                font-weight: 600;
            }

            .scheduled-for-today {
                display: inline-block;
                margin-right: 5px;
                font-size: 16px;
                color: red;
                font-style: italic;
                .sprite {
                    margin-right: 5px;
                    position: absolute;
                    top: 5px;
                    display: inline-block;
                    height: 27px;
                    width: 25px;
                    background: url(<%= asset_path 'scheduled-for-today.png' %>);
                    background-size: 25px 27px;
                    background-repeat: no-repeat;
                }
                .text {
                    margin-left: 30px;
                    line-height: 30px;
                    position: relative;
                    top: 1px;
                }

            }

            .account-email {
                display: inline-block;
                height: 40px;
                font-size: 16px;
                color: #4A4A4A;
                font-weight: bold;
            }

            .priority1 {
                background-color: #FA5555;
            }

            .priority2 {
                background-color: #FF712F;
            }

            .priority3 {
                background-color: #0099CC;
            }

            .priority4 {
                background-color: #B4B4B4;
            }

            .account-life-duration {
                margin-left: 2px;
                @include thread-label;
            }

            .requests-count-for-today {
                @include thread-label;
            }

            .thread-status {
                @include thread-label;

                &.scheduling-waiting-for-client {
                   background-color: #C49D5D;
                }

                &.scheduling-waiting-for-contact {
                    background-color: #C49D5D;
                }

                &.scheduled {
                    background-color: #49C9A9;
                }

                &.scheduling-aborted {
                    background-color: #C86E6E;
                }

                &.does-not-concern-client {
                    background-color: #B4B4B4;
                }

                &.handled-in-other-threads {
                    background-color: #806D90;
                }

                &.events-creation {
                    background-color: #7A6E63;
                }

                &.new-request {
                    background-color: #F5A623;
                }

                &.other {
                    background-color: #B4B4B4;
                }
            }

            .thread-operator {
                display: inline-block;
                margin-left: 5px;
                font-style: italic;
                .operator-color {
                    width: 6px;
                    height: 6px;
                    display: inline-block;
                    border-radius: 10px;
                    margin-right: 5px;
                    vertical-align: middle;
                }
                .operator-name {
                    vertical-align: middle;
                    font-size: 16px;
                }
            }

            .subject-and-snippet {
                position: absolute;
                overflow: hidden;
                height: 30px;
                top: 32px;
                left: 76px;
                font-size: 16px;
                font-weight: 400;

                .subject {
                    display: inline;
                }

                .snippet {
                    display: inline;
                    font-size: 16px;
                    font-weight: 200;
                }
            }

            .delegated-to-founders {
                position: absolute;
                top: 20px;
                left: -87px;
                height: 26px;
                line-height: 16px;
                background: #f60;
                color: white;
                padding: 5px 10px;
                border-radius: 4px;
                font-size: 16px;

                &.vip {
                    left: -68px;
                    height: 36px;
                    width: 36px;
                    border-radius: 20px;

                    .delegation-text {
                        position: relative;
                        top: 6px;
                        left: -5px;
                        letter-spacing: 1px;
                    }
                }
            }

            .received-at {
                text-align: right;
                width: 150px;
                height: 40px;
                overflow: hidden;
                position: absolute;
                top: 0;
                right: 20px;
                font-size: 16px;
                font-weight: 400;
            }

            .emails-count {
                display: inline-block;
                position: absolute;
                top: 32px;
                left: 10px;
                font-style: italic;
                font-size: 16px;
                color: #4A4A4A;
            }

            &:hover {
                background: #f2f2f2;
            }
        }


        .to-process-later-container, .waiting-for-preference-change-container {
            padding: 100px 0 0 0;



            .messages-thread-item {
                opacity: 0.4;
            }
        }
    }

    .category-title {
        color: #aaa;
        padding: 5px 0 10px 0;
        font-size: 14px;
        font-weight: 400;
    }

    .nothing-to-do {
        img {
            margin: 20px 0;
        }
        text-align: center;
        font-size: 20px;
        font-weight: 200;
    }
}

