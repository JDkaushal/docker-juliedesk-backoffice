.messages-threads-page {

    .refresh-container {
        margin: 60px auto 10px auto;
        height: 80px;
        .refresh-inbox-button {
            margin: 10px auto 10px auto;
            display: block;
            width: 200px;
        }
        .spinner {
            margin: 20px auto 10px auto;
            display: block;
            width: 20px;
            display: none;
        }
    }

    .messages-threads-container {
        border-top: 1px solid #ccc;
        margin: 20px 0 20px 0;
        .messages-thread-item {
            text-align: left;
            height: 40px;
            line-height: 40px;
            border-bottom: 1px solid #ccc;
            background: #f5f5f5;
            padding: 0 20px;
            display: block;
            //overflow: hidden;
            color: black;
            text-decoration: none;
            font-size: 13px;
            position: relative;

            .account-email {
                display: inline-block;
                width: 200px;
                overflow: hidden;
                height: 40px;
            }

            .subject-and-snippet {
                position: absolute;
                overflow: hidden;
                height: 40px;
                top: 0;
                left: 200px;
                right: 190px;

                .subject {
                    display: inline;
                }

                .snippet {
                    display: inline;
                    color: #999;
                }
            }

            .delegated-to-founders {
                position: absolute;
                top: 8px;
                left: -75px;
                height: 26px;
                line-height: 20px;
                background: #f60;
                color: white;
                padding: 3px 5px;
                border-radius: 4px;
            }

            .received-at {
                text-align: right;
                width: 150px;
                height: 40px;
                overflow: hidden;
                position: absolute;
                top: 0;
                right: 20px;
            }

            &:hover {
                background: #f2f2f2;
            }
        }

        .to-process-later-container {
            padding: 100px 0 0 0;

            .to-process-later-category-title {
                color: #aaa;
                padding: 5px 0 10px 0;
                font-size: 14px;
                font-weight: 100;
                border-bottom: 1px solid #eee;
            }

            .messages-thread-item {
                opacity: 0.4;
            }
        }
    }

    .nothing-to-do {
        img {
            margin: 20px 0;
        }
        text-align: center;
        font-size: 20px;
        font-weight: 200;
    }
}

.messages-thread-emails {
    margin: 30px 0;
    position: relative;

    .messages-thread-subject {
        border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 5px 10px;
        font-size: 16px;
        font-weight: 600;
    }
    .split-thread-button {
        position: absolute;
        top: -30px;
        right: 42px;
        width: 32px;
        height: 32px;
        border: 1px solid #ccc;
        cursor: pointer;
        background: url(<%= asset_path "split.png" %>);
    }

    .archive-button {
        position: absolute;
        top: -30px;
        right: 0px;
        width: 32px;
        height: 32px;
        border: 1px solid #ccc;
        cursor: pointer;
        background: url(<%= asset_path "archive.png" %>);
    }

    .split-buttons-container {
        position: absolute;
        top: -31px;
        right: 100px;
        display: none;
    }

    &.splitting {
        .split-buttons-container {
            display: block;
        }
        .email .retracted {
            display: block;
        }
        .email .extended {
            display: none;
        }
        .email .retracted .checkbox-container {
            display: block;
        }
    }
}