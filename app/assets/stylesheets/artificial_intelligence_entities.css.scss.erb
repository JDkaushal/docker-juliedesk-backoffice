$aiControlColor: #9013FE;
$aiControlInputBorderColor: #D9AEFF;

select.ai-need-control {
    color: $aiControlColor;
}
input.ai-need-control {
    border-color: $aiControlInputBorderColor !important;
    border-width: 1px;
    box-shadow: inset 1px 1px 4px 0px #6B0CBE ;
}
label.ai-need-control {
    color: $aiControlColor !important;
}

.need-ai-confirmation {
    label {
        color: $aiControlColor !important;
    }

    input {
        border-color: $aiControlInputBorderColor !important;
        border-width: 1px;

        box-shadow: inset 1px 1px 4px 0px #6B0CBE ;
