.email {
    position: relative;
    background-color: #fff;
    border-bottom: 1px solid #ccc;

    &.highlighted {
        background-color: $lightBlue;
    }

    &.splitted {
      opacity: 0.5;
    }


    .full-review-container {
        position: relative;
        @include transition-property(height);
        @include transition-duration(0.2s);
        height: 0px;
        z-index: 0;

        .to-learn-button, .to-learn-label {
            position: absolute;
            left: -55px;
            height: 50px;
            width: 50px;
            text-align: center;
            padding: 6px 2px;
            font-size: 13px;
            @include border-radius(4px);

            &.to-learn-button {
                top: 5px;
                background-color: rgb(219, 245, 219);
                cursor: pointer;
            }
            &.to-learn-label {
                top: 25px;
                background: red;
                color: white;
                display: none;
            }
        }


        &.already-set {
            opacity: 0.3;
        }

        .notation-container {
            height: 22px;
            padding: 1px;
            width: 144px;
            position: absolute;
            top: 4px;
            left: 10px;
            cursor: pointer;
            @include border-radius(5px);
            @include transition-property(top);
            @include transition-duration(0.2s);

            .notation-option {
                width: 20px;
                height: 20px;
                margin: 0 1px;
                background-color: #ddd;
                float: left;
                @include border-radius(5px);

                &:nth-child(6) {
                    background-color: #eee;
                    margin-left: 10px;
                }

                &:hover {
                    background: #ccc;
                }


            }

            &.notation-1 {
                .notation-option:nth-child(1) {
                    @include common-sprite(red_flag);
                }
            }
            &.notation-2 {
                .notation-option:nth-child(1), .notation-option:nth-child(2) {
                    background: red;
                }
            }
            &.notation-3 {
                .notation-option:nth-child(1), .notation-option:nth-child(2), .notation-option:nth-child(3) {
                    background: orange;
                }
            }
            &.notation-4 {
                .notation-option:nth-child(1), .notation-option:nth-child(2), .notation-option:nth-child(3), .notation-option:nth-child(4) {
                    background: #7c7;
                }
            }
            &.notation-5 {
                .notation-option:nth-child(1), .notation-option:nth-child(2), .notation-option:nth-child(3), .notation-option:nth-child(4), .notation-option:nth-child(5) {
                    background: #7c7;
                }
            }

            &.notation-6 {
                .notation-option:nth-child(1), .notation-option:nth-child(2), .notation-option:nth-child(3), .notation-option:nth-child(4), .notation-option:nth-child(5) {
                    background: #7c7;
                }
                .notation-option:nth-child(6) {
                    @include common-sprite(gold_star);
                }
            }
        }

        .group-review-container {
            position: absolute;
            top: 40px;
            left: 240px;
        }

        textarea {
            position: absolute;
            right: 10px;
            top: 10px;
            height: 80px;
            width: 300px;
            height: 80px;
            resize: none;
            border: 1px solid #ccc;
            display: none;
            outline: none;
        }

        &.expanded {
            height: 100px;
            .notation-container {
                top: 40px;
            }
            textarea {
                display: block;
            }
            .to-learn-button {
                display: none;
            }
            .to-learn-label {
                display: block;
            }
        }
    }
    .email-container {
        position: relative;
    }

    .retracted {
        display: block;
        background: #f5f5f5;
        cursor: pointer;
        height: 60px;
        position: relative;

        .retracted-container {

        }
        .checkbox-container {
            height: 62px;
            width: 60px;
            text-align: center;
            position: relative;
            display: none;
            position: absolute;
            left: -60px;
            top: -1px;
            background: #f5f5f5;
            border-bottom: 1px solid #ccc;
            border-top: 1px solid #ccc;

            input {
                margin: 20px 0;
                position: relative;
                z-index: 2;
            }

            label {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
            }
        }


        .subject {
            display: none;
        }
        .snippet {
            padding: 5px 300px 5px 10px;
            height: 29px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
    }

    .extended {
        display: none;
        background: white;

        .retractable {
            cursor: pointer;
        }
    }

    &.extended {
        .extended {
            display: block;
            position: relative;
        }
        .retracted {
            position: absolute;
            /*display: none;*/
            z-index: 0;
            top: 0;
            left: 0;
            width: 100%;
        }
    }

    .date-and-from {
        padding: 5px 10px 5px 10px;
        .message {
            width: 450px;
            position: absolute;
            top: 10px;
            left: 10px;
            height: 45px;
            overflow: hidden;
            font-size: 11px;
        }
        .from {
            float: left;
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
        }
        .date {
            font-weight: 600;
            line-height: 20px;
            font-size: 14px;
            float: right;
        }

        .email-flag {
            @include common-sprite(flag_grey);
            width: 12px;
            height: 21px;
            float: right;
            margin: 0 0 0 10Px;
            &.flagged {
                @include common-sprite(flag_red);
            }
        }
        .email-was-merged, .email-was-split {
            float: right;
            background: $darkBlue;
            color: white;
            text-align: center;
            width: 20px;
            height: 20px;
            line-height: 20px;
            border-radius: 10px;
            font-size: 10px;
            margin: 0 0 0 10px;
        }
    }

    .subject {
        border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 5px 10px;
        font-size: 16px;
        font-weight: 600;
    }

    .to, .cc {
        font-size: 14px;
        line-height: 20px;
        padding: 0px 10px;
        font-weight: 200;
        font-size: 14px;
        .email-label {
            color: #aaa;
        }
    }

    .from, .to, .cc {
        .highlighted {
            background: rgb(191, 228, 240);
            padding: 2px 5px;
        }
        .julie-highlighted {
            background: #F3B9D2;
            padding: 2px 5px;
        }
    }

    .current-action-message {
        position: absolute;
        right: 18px;
        top: 40px;
        line-height: 30px;
        padding: 0px 20px;
        background: rgba(255, 255, 255, 0.4);
        cursor: default;
        color: rgba(0, 0, 0, 0.3);
        font-weight: 600;
    }

    .suggested-action-by-julie {
        position: absolute;
        top: 40px;
        right: 70px;

        &.enabled {
            cursor: pointer;
        }
    }

    .actions-menu-button {
        position: absolute;
        top: 30px;
        right: 20px;
        width: 40px;
        height: 40px;
        line-height: 80px;
        background: red;
        cursor: pointer;
        border: 1px solid #ccc;
        background: #fafafa;
        content: url(<%= asset_path "answer-all.png" %>);

        &:hover {
            background: #f5f5f5;
        }
    }
    .actions-menu-positioner {
        position: absolute;
        display: none;
        top: 69px;
        right: 20px;

        &.visible {
            display: block;
        }

        .actions-menu {
            width: 260px;
            //height: 392px;
            border: 1px solid #ccc;
            background: #fff;
            cursor: default;
            z-index: 5;
            @include box-shadow(0 3px 6px rgba(0, 0, 0, 0.1));
            margin: 0 0 50px 0;
            position: relative;
            padding: 0 0 20px 0;

            .classification-category {
                border-top: 1px solid #ccc;
                margin: -1px 0 20px 0;

                .classification-title {
                    padding: 5px;
                    font-size: 12px;
                    color: #aaa;
                }

                .action {
                    height: 30px;
                    line-height: 30px;
                    cursor: pointer;
                    padding: 0 10px;
                    display: block;
                    color: #000;
                    text-decoration: none;
                    font-size: 13px;
                    cursor: pointer;
                    display: block;
                    background: transparent;
                    border: none;
                    width: 100%;
                    text-align: left;

                    &:hover {
                        background: #f5f5f5;
                    }

                    &[disabled] {
                        color: #aaa;
                        background: #fff;
                        cursor: default;
                    }
                }
            }

            .spinner {
                display: none;
                position: absolute;
                bottom: 10px;
                width: 20px;
                left: 120px;
            }

        }
    }


    .body {
        //border-bottom: 1px solid #ccc;
        line-height: 20px;
        padding: 30px 10px 5px 10px;

        * {
            /*background: transparent !important;*/
        }

        .juliedesk-phone-number {
            background-color: #eee;
            padding: 2px;
        }

        .wetime-date-link {
            background: rgb(254, 247, 186) !important;
            padding: 0 5px;

            .conflict-dot {
                display: none;
            }
        }

        .expand-quotes-button {
            background: #ddd;
            border: 1px solid #ccc;
            width: 50px;
            text-align: center;
            line-height: 8px;
            padding: 0;
            font-size: 20px;
            height: 20px;
            margin: 10px 0;
            cursor: pointer;
            @include user-select(none);
        }

        blockquote, .gmail_quote {
            display: none;
            font-size: 14px !important;

            &.expanded {
                display: block;
            }
        }
    }

    .attachments-container {
        padding: 20px;
        .attachment-box {
            border: 1px solid #ddd;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 2px;
            color: black;
            text-decoration: none;
            margin: 0 20px 20px 0;
            width: 150px;
            height: 100px;
            position: relative;

            .attachment-name {
                font-size: 11px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                position: absolute;
                bottom: 0px;
                left: 0px;
                right: 0px;
                height: 30px;
                text-align: center;
                background-color: #f6f6f6;
                padding: 5px;
                line-height: 20px;
                border-top: 1px solid #eee;
            }

            &:hover .attachment-name {
                background: #f0f0f0;
            }

            img.attachment-preview {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 30px;
                max-width: 148px;
                max-height: 70px;
                margin: 0 auto;
            }

            div.attachment-preview {
                position: absolute;
                top: 25px;
                left: 0;
                right: 0;
                bottom: 30px;
                text-align: center;
                font-size: 20px;
                font-weight: 200;
                color: #aaa;
                text-transform: uppercase;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        }
    }
}

.left-column {
    .email {
        .operator-and-action-container {
            position: absolute;
            top: 30px;
            right: 0px;

            .operator {
                float: right;
                margin: 0 10px;
                padding: 0 8px;
                background-color: white;
                color: #646161;
                border-radius: 4px;
                line-height: 20px;
                font-size: 12px;
                border: 1px solid #ddd;
            }
            .nature {
                background: $darkBlue;
                color: white;
                @include border-radius(4px);
                float: right;
                padding: 1px 5px;
                font-size: 12px;
                margin: 2px 0px;
            }
        }
    }

    &.review {
        .email {
            .operator-and-action-container {
                float: left;
                position: static;
                padding: 0 5px;
            }
        }
    }

    &.group-review {
        .email {
            .operator-and-action-container {
                .operator {
                    display: none;
                }
            }
        }
    }
}

.ics-preview-container {
    display: none;

    .ics-preview {
        border: 1px solid #ddd;
        padding: 20px;
        margin: 20px;
        background-color: #fafafa;
        border: 1px solid #eee;
        border-top: 6px solid #00d;

        .summary {
            font-size: 30px;
            font-weight: 200;
        }

        .ics-preview-field {
            position: relative;
            padding: 0 0 0 60px;
            margin: 10px 0;
            min-height: 30px;
            word-break: break-all;

            &.notes {
                color: #aaa;
            }

            .organizer {
                font-weight: 800;
            }

            .ics-preview-label {
                position: absolute;
                left: 0;
                color: #999;
                font-size: 12px;
                font-weight: 200;
                line-height: 22px;
            }
        }
    }
}


.highlighted-below-email {
    background-color: $lightBlue;
    padding: 10px;
}