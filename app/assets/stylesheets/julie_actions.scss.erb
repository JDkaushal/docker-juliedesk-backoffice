.julie-action-title {
    background: $darkBlue;
    line-height: 30px;
    text-align: center;
    color: white;
    font-size: 20px;
    font-weight: 200;
    padding: 5px 0;
    position: absolute;
    top: 40px;
    width: 100%;
    left: 0;
    z-index: 5;

  &.event-created-by-ai {
    background: $aiControlColor;
  }

    #show-calendar-button {
        position: absolute;
        top: 5px;
        right: 20px;
    }
}
.julie-action-fantom {
    height: 70px;
    width: 100%;
}
.language-selector-container {
    position: absolute;
    bottom: -50px;
    left: 0;
    height: 30px;
    width: 100px;
    background-color: white;
    border: 1px solid #ccc;
    line-height: 28px;

    .selector {
        display: inline-block;
        width: 50%;
        text-align: center;
        cursor: pointer;

        &:hover {
            background: #eee;
        }
    }
}

.template-manager-container {
    position: absolute;
    top: 128px;
    right: 10px;
    z-index: 1;

  .template-manager-menu-wrapper {
    width: 500px;
  }

    .template-manager-menu-button {
        position: absolute;
        top: 0px;
        right: 0px;
        width: 33px;
        height: 37px;
        text-align: center;
        @include common-sprite(forward-to-client-template-menu);
        cursor: pointer;
        @include box-shadow(0 3px 6px rgba(0, 0, 0, 0.4));
    }

  .menu-container {
    float: right;
    position: relative;
    top: 37px;
    outline: none !important;

    .main-menu-container {
      max-width: 350px;

      .template-manager-search {
        position: relative;

        input {
          width: 100%;
          padding: 5px;
        }
      }
    }

    .template-manager-menu, .template-manager-sub-menu {
      position: relative;
      background: white;
      border-top: 1px solid #ddd;
      border-left: 1px solid #ddd;
      border-right: 1px solid #ddd;
      z-index: 2;

      max-height: 380px;
      width:100%;

      overflow: auto;

      .template-manager-menu-item {
        border-bottom: 1px solid #ddd;
        //width: 500px;
        padding: 5px 20px;
        cursor: pointer;

        &.highlighted {
          background-color: $darkBlue;
          color: white;
        }

        &:hover {
          background-color: $darkBlue;
          color: white;
        }
      }

      .template-manager-menu-tag {
        font-weight: bold;
      }
    }

    .template-manager-sub-menu {
      //left: -501px;
      position: absolute;
      max-width: 520px;
      width: max-content;
    }
  }
}