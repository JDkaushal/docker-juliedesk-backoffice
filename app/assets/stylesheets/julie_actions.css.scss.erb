.julie-action-title {
    background: $darkBlue;
    line-height: 30px;
    text-align: center;
    color: white;
    font-size: 20px;
    font-weight: 200;
    padding: 5px 0;
    position: absolute;
    top: 40px;
    width: 100%;
    left: 0;
    z-index: 5;

    #show-calendar-button {
        position: absolute;
        top: 5px;
        right: 20px;
    }
}
.julie-action-fantom {
    height: 70px;
    width: 100%;
}
.language-selector-container {
    position: absolute;
    bottom: -50px;
    left: 0;
    height: 30px;
    width: 100px;
    background-color: white;
    border: 1px solid #ccc;
    line-height: 28px;

    .selector {
        display: inline-block;
        width: 50%;
        text-align: center;
        cursor: pointer;

        &:hover {
            background: #eee;
        }
    }
}