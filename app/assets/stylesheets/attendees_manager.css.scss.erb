@mixin vertical-align($translateY, $position: relative) {
    position: $position;
    top: 50%;
    -webkit-transform: translateY($translateY);
    -ms-transform: translateY($translateY);
    transform: translateY($translateY);
}

.attendees-manager{

    margin-top: 30px;


    .need-ai-confirmation {
        .gender-radio-btn{
            &:checked{
                background-color: $aiControlColor;
                &:after{
                    color: white;
                }
            }
        }
    }

    .gender-radio-btn{
        height: 35px;
        width: 36px;
        display: inline-block;

        -webkit-appearance: none;
        background-color: white;
        border: 1px solid #cacece;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05), inset 0px -15px 10px -12px rgba(0,0,0,0.05);

        &:checked{
            background-color: $darkBlue;
            &:after{
                color: white;
            }
        }

        &:after{
            font-size: 14px;
            position: relative;
            top: 25%;
            left: 34%;
            color: black;
        }

        &.gender-masculin:after{
            content: 'M';
        }

        &.gender-feminin:after{
            content: 'Mme';
            left: 2%;
        }

        &.gender-unknown:after{
            content: '?';
            left: 40%;
        }

        .ng-invalid{
            &.ng-dirty{
                border-color: initial;
            }
        }

        .ng-valid{
            &.ng-dirty {
                border-color: initial;
            }
        }
    }

    .ai-confirm-btn {
        background-color: $aiControlColor;
        float: right;
        color: white;

    }
    .ai-confirm-btn-form {
        background-color: $aiControlColor !important;
    }

    .registered-attendees-search-input {
        margin-bottom: 5px;
    }
    
    .add-attendee-btn-container{
        margin-bottom: 15px;
        button{
            background-color: #0099CC;
            color: white;
            border: none;
            height: 35px;
            width: 210px;
        }
    }

    .contact-group {
        &.search-list {
            max-height: 350px;
            overflow-y: auto;
        }
    }

    .row{
        margin-left: 0;
        margin-right: 0;
    }
    .header{
        font-size: 14px !important;
        margin: 10px 0 10px !important;
        font-weight: bold;
        text-transform: uppercase;
        color: $darkBlue;
    }


    .attendee-company-title{
        font-size: 14px !important;
        margin: 25px 0 5px !important;
        text-transform: uppercase;
        color: $darkBlue;
        float:left;
    }

    .contact{
        border-style: solid;
        border-width: 1px;
        border-color: #DEDEDE;
        padding: 5px;
        float: left;
        margin-bottom: 5px;
        width: 100%;

        &.highlighted-in-search {
            background-color: $darkBlue;
            color: white;
        }
    }

    attendee-general-details {
        display: table;
        float: left;
        width: 100%;

        .attendee-checkbox{
            padding-left: 5px;
            margin-top: 1px;
        }

        .client-picto-contact{
            padding-left: 0px;
        }
    }

    .client-picto-contact{
        padding-left: 9px;
        img {
            width: 20px;
            height: 20px;
        }
    }

    .search-list {
        .client-picto-contact{
            position: relative;
            top: 4px;
            left: -3px;

            img {
                width: 25px;
                height: 30px;
            }
        }

        &.highlighted-in-search {
            .client-picto-contact{
                img {
                    padding-left: 25px;
                    background: url(<%= asset_path 'client_white2x.png' %>);
                    background-size: 25px 30px;
                }
            }
        }
    }

    .client-correction{
        padding-left: 15px;
    }

    .attendee-additional-informations{
        margin-right: 7px;

        label{
            color: #7A7D84;
            margin-bottom: 0;
            font-size: 12px;
        }
        input[type="text"]{
            border-radius: 1px;
            font-size: 15px;
        }

        .ellipsable{
            overflow: hidden;
            text-overflow: ellipsis;
            float: left;
            width: 100%;
        }

        .timezone {
            margin: 10px 0px;
        }

        .missing-call-informations{
            margin: 0px 0px 10px 0px;
            background: url(<%= asset_path 'warning.png' %>);
            background-size: 20px 20px;
            background-repeat: no-repeat;
        }

        .additional-informations-fields{
            border-top-style: solid;
            border-top-width: 1px;
            border-top-color: $borderGrey;
            padding-top: 5px;
        }
    }

    .attendee-details{
        display: table-cell;
        vertical-align: top;
        padding-left: 0px;
        padding-right: 0px;

        &.light {
            cursor: pointer;
        }

        .ellipsable{
            overflow: hidden;
            text-overflow: ellipsis;
            float: left;
            width: 100%;
        }

        .missing-call-informations{
            margin: 0px 0px 10px 0px;
            background: url(<%= asset_path 'warning.png' %>);
            background-size: 20px 20px;
            background-repeat: no-repeat;
        }

        .additional-informations-fields{
            border-top-style: solid;
            border-top-width: 1px;
            border-top-color: $borderGrey;
            padding-top: 5px;
        }

        .attendee-usage-name{
            font-size: 16px;
            font-weight: 400;
        }

        .attendee-company{
            text-transform: uppercase;
            color: #9EA5B5;
            margin-left: 5px;
        }
        .attendee-no-company{
            color: #9EA5B5;
            font-size: 12px;
            margin-left: 10px;
        }

        .attendee-email{
            font-size: 12px;
        }

        .attendee-timezone{
            font-size: 12px;
            color: #848484;
        }
        .attendee-assistant{
            color: #0099CC;
            font-style: italic;
            font-size: 12px;
        }
    }
    .attendee-update-button-container{
        display: table-cell;
        vertical-align: middle;
        position: relative;
        top: 7px;
        left: 12px;
        button{
            width: 20px;
            height: 20px;
            img{
                position: relative;
                top: -2px;
                left: -8px;
            }
        }
    }

    .attendee-details-form{
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        z-index: 2;
        background-color: white;
        width: 349px;
        overflow: scroll;
    }

    .ng-invalid{
        &.ng-dirty{
            border-color: #cacece;
        }
    }

    .ng-valid{
        &.ng-dirty {
            border-color: #cacece;
        }
    }



    attendees-form{

        .header-row{
            &.isClient{
                margin-top: 4px !important;
            }
            &.notClient{
                margin-top: -25px !important;
            }
        }

        label{
            font-size: 12px;
        }

        input[type="text"], input[type="email"], textarea{
            border-radius: 1px;
            font-size: 15px;
        }

        .attendee-details-client{
            padding-left: 30px;
        }

        .new-attendee-form-picto{
            position: relative;
            top: 75%;
            @include vertical-align(65%);
            left: 4px;
        }

        .attendee-form-picto{
            @include vertical-align(15%);
            left: 4px;
        }

        .form-header{
            text-transform: uppercase;
            top: 0;
            right: 0;
            width: 350px;
            background: rgba(40, 166, 203, 0.9);
            padding: 5px 0;
            text-align: center;
            color: #fff;
            font-size: 18px;
            font-weight: 200;
            line-height: 30px;
            z-index: 2;
        }

        .attendee-details-form{
            .row{
                margin-left: 20px;
                margin-right: 5px;
                margin-top: 7px;
            }
        }

        input[name="gender"]{
            margin-top: 0px;
        }

        .attendee-details {
            display: table-cell;
            vertical-align: top;
            padding-right: 15px;
            padding-left: 25px;
            z-index: 2;
        }

        .form-attendee-checkbox{
            z-index: 4;
            position: relative;
            top: 2px;
            right: 93%;
            display: inline-block;
            input[type="checkbox"]{
                right: 10px;
                @include vertical-align(25%);
            }
        }

        .new-form-attendee-checkbox{
            z-index: 4;
            position: relative;
            top: 17px;
            right: 10%;
            display: inline-block;

            input[type="checkbox"]{
                right: 7px;
                @include vertical-align(30%);
            }
        }

        .new-attendee-details-client{
            padding-left: 25px !important;
            padding-right: 0 !important;
            width: 87.333333% !important;
            top: -30px;
            margin-bottom: -29px;
        }

        .form-checkbox-label{
            font-size: smaller;
            padding-left: 0;
            padding-right: 0;
            @include vertical-align(10%);
        }

        .attendee-checkbox{
            position: relative;
            top: 57px;
            left: -12px;
            z-index: 3;
            display: inline-block;

            &.new-form-checkbox{
                top: 52px;
            }
        }

        .assistant-checkbox{
            height: 14px;
            width: 14px;
        }

        .regular-checkbox {
            -webkit-appearance: none;
            background-color: #fafafa;
            border: 1px solid #cacece;
            box-shadow: 0 1px 2px rgba(0,0,0,0.05), inset 0px -15px 10px -12px rgba(0,0,0,0.05);
            padding: 9px;
            border-radius: 3px;
            display: inline-block;
            position: relative;
            background: image-url("contact_unchecked.png");
            background-size: 18px 18px;
            background-repeat: no-repeat;

            &:active, &:checked:active{
                box-shadow: 0 1px 2px rgba(0,0,0,0.05), inset 0px 1px 3px rgba(0,0,0,0.1);
            }

            &:checked {
                background: image-url("contact_checked.png");
                background-size: 18px 18px;
                background-repeat: no-repeat;
            }
        }

        .assistant-area{
            padding-top: 19px;
            padding-left: 0;
            .row{
                margin-left: 0;
                margin-right: 0;
            }

            .col-xs-2{
                padding-left: 0;
                padding-right: 0;
            }
        }

        input[type="submit"]{
            background-color: #0099CC;
            color: white;
            width: 70px;
            border: none;
            height: 35px;
        }

        label{
            color: #7A7D84;
            font-weight: 400;
            margin-bottom: 0px;
        }

        .cancel-btn{
            background-color: #EA5959;
            color: white;
            width: 80px;
            border: none;
            height: 35px;
        }

        .error-area{
            &.highlighted{
                color: #EA5959 !important;
            }
            margin-top: 10px;
            margin-bottom: 10px;
            line-height: 1;
        }
    }
}
