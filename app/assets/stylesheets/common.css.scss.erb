@import url(https://fonts.googleapis.com/css?family=Open+Sans:400italic,700,600,500,400,300,200,100);
@import "common/*.png";
$pink: #f4416d;
$darkGrey: #494242;
$borderGrey: #ccc;

$darkBlue: rgba(40, 166, 203, 0.9);
$lightBlue: #E7F2F5;

html {
  height: 100%;
}
body {
  font-family: 'Open Sans', sans-serif;
  min-height: 100%;
  padding: 0 0 40px 0;
  position: relative;
}
.btn-success, .btn-success:hover {
  background-color: #2EC094 !important;
  border-color: #2EC094 !important;
}
.btn-primary, .btn-primary:hover {
  background-color: $darkBlue;
  border-color: $darkBlue;
}


.fixed-columns {
  padding-right: 350px;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  .left-column {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 0 20px 0 100px;
    overflow: scroll;
  }

  &.full {
    padding: 0;
    .left-column {
      padding: 0 100px 0 100px;
    }
  }
}


.row.minheight {
  min-height: 100%;
  position: relative;
}

.clear {
  clear: left;
}

.page {
  position: relative;
}
#back-button {
  position: absolute;
  left: -95px;
  top: -40px;
  padding: 10px;
  display: inline-block;
}
.page.bordered{
  border-left: 1px solid #ccc;
  padding-bottom: 20px;
}


.footer {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 40px;
  line-height: 40px;
  width: 100%;

  .copyright {
    text-align: right;
    color: #666;
    font-size: 14px;
  }
}

.standard-panel {
  text-align: center;
  padding: 20px 0;
  width: 1100px;
  margin: 0 auto;
}