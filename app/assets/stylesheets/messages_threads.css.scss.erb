.messages-threads-container {
  border-top: 1px solid #ccc;
  margin: 20px 0;
  .messages-thread-item {
    text-align: left;
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #ccc;
    background: #f5f5f5;
    padding: 0 20px;
    display: block;
    overflow: hidden;
    color: black;
    text-decoration: none;
    font-size: 13px;

    .account-email {
      display: inline-block;
      width: 200px;
      overflow: hidden;
      height: 40px;
    }

    .subject-and-snippet {
      display: inline-block;
      width: 660px;
      overflow: hidden;
      height: 40px;
      .subject {
        display: inline;
      }

      .snippet {
        display: inline;
        color: #999;
      }
    }

    .received-at {
      display: inline-block;
      text-align: right;
      width: 150px;
      height: 40px;
      overflow: hidden;
    }
  }
}



.messages-thread-emails {
  margin: 30px 0;
  position: relative;

  .messages-thread-subject {
    border-bottom: 1px solid #ccc;
    line-height: 20px;
    padding: 5px 10px;
    font-size: 16px;
    font-weight: 600;
  }
  .split-thread-button {
    position: absolute;
    top: -10px;
    right: 42px;
    width: 32px;
    height: 32px;
    border: 1px solid #ccc;
    cursor: pointer;
    background: url(<%= asset_path "split.png" %>);
  }

  .archive-button {
    position: absolute;
    top: -10px;
    right: 0px;
    width: 32px;
    height: 32px;
    border: 1px solid #ccc;
    cursor: pointer;
    background: url(<%= asset_path "archive.png" %>);
  }

    .split-buttons-container {
        position: absolute;
        top: -11px;
        right: 100px;
        display: none;
    }

    &.splitting {
        .split-buttons-container {
            display: block;
        }
        .email .retracted {
            display: block;
        }
        .email .extended {
            display: none;
        }
        .email .retracted .checkbox-container {
            display: block;
        }
    }
}
